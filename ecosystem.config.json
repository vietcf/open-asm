{
  "apps": [{
    "name": "open-asm",
    "script": "src/app.js",
    "instances": 1,
    "exec_mode": "fork",
    "env": {
      "NODE_ENV": "development",
      "PORT": 3000
    },
    "env_production": {
      "NODE_ENV": "production",
      "PORT": 3000
    },
    "log_file": "logs/combined.log",
    "out_file": "logs/out.log",
    "error_file": "logs/error.log",
    "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
    "merge_logs": true,
    "watch": false,
    "ignore_watch": ["node_modules", "logs", "public/uploads"],
    "restart_delay": 4000,
    "max_restarts": 10,
    "min_uptime": "10s",
    "kill_timeout": 5000
  }]
}
