<div class="container-fluid">
  <form class="input-group mb-3 justify-content-end align-items-center" role="search" method="get" action="/network/ip-address" style="margin-top: 2.5rem; margin-right: 0.5rem; max-width: 500px; margin-left: auto;">
    <input class="form-control rounded-start me-2" type="search" name="search" placeholder="Search IP or Description..." aria-label="Search" value="<%= typeof search !== 'undefined' ? search : '' %>">
    <select class="form-select form-select-sm me-2" name="pageSize" onchange="this.form.submit()" style="width:90px;max-width:90px;">
      <% (pageSizeOptions || [10,20,50]).forEach(function(size) { %>
        <option value="<%= size %>" <%= pageSize == size ? 'selected' : '' %>><%= size %> / page</option>
      <% }) %>
    </select>
    <button class="btn btn-outline-secondary rounded-end" type="submit"><i class="bi bi-search"></i></button>
  </form>
  <div class="row mb-3">
    <div class="col-12 d-flex justify-content-end align-items-center">
      <button type="button" class="btn btn-primary btn-sm me-2" data-bs-toggle="modal" data-bs-target="#addIpModal" <% if (!hasPermission('ip_address.create')) { %>style="display:none"<% } %>>
        <i class="bi bi-plus"></i> Add IP
      </button>
      <% if (hasPermission('ip_address.create')) { %>
        <button type="button" class="btn btn-success btn-sm me-2" data-bs-toggle="modal" data-bs-target="#importIpModal">
          <i class="bi bi-upload"></i> Import IP
        </button>
        <a href="/network/ip-address/template" class="btn btn-outline-info btn-sm me-2" download>
          <i class="bi bi-download"></i> Download Template
        </a>
      <% } %>
      <!-- Add IP Modal -->
      <div class="modal fade" id="addIpModal" tabindex="-1" aria-labelledby="addIpModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="addIpModalLabel">Add IP Address</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <form id="addIpForm" action="/network/ip-address" method="POST">
                <input type="hidden" name="page" value="<%= page %>">
                <div class="mb-3">
                  <label for="ipAddress" class="form-label">IP Address(es) <span class="text-danger">*</span></label>
                  <input type="text" class="form-control form-control-sm" id="ipAddress" name="address" placeholder="IP Address or multiple IPs separated by comma (e.g., 192.168.1.1, 192.168.1.2)" required>
                  <div class="form-text text-muted">You can enter multiple IP addresses separated by commas</div>
                </div>
                <div class="mb-3">
                  <label for="ipDescription" class="form-label">Description</label>
                  <textarea class="form-control form-control-sm" id="ipDescription" name="description" placeholder="Description" rows="2"></textarea>
                </div>
                <div class="mb-3">
                  <label for="ipStatus" class="form-label">Status</label>
                  <select class="form-select form-select-sm" id="ipStatus" name="status">
                    <option value="">-- No status --</option>
                    <% (ipStatusOptions || []).forEach(function(opt) { %>
                      <option value="<%= opt.value %>" <%= typeof filterStatus !== 'undefined' && filterStatus === opt.value ? 'selected' : '' %>><%= opt.label %></option>
                    <% }) %>
                  </select>
                </div>
                <div class="mb-3">
                  <label for="ipTags" class="form-label">Tags</label>
                  <select id="ipTags" name="tags[]" class="form-control" multiple></select>
                </div>
                <div class="mb-3">
                  <label for="ipContacts" class="form-label">Contacts</label>
                  <select id="ipContacts" name="contacts[]" class="form-control" multiple></select>
                </div>
                <div class="mb-3">
                  <label for="ipSystems" class="form-label">Systems</label>
                  <select id="ipSystems" name="systems[]" class="form-control" multiple></select>
                </div>
                <div class="modal-footer d-flex justify-content-end">
                  <button type="submit" class="btn btn-primary btn-sm">Add IP</button>
                  <button type="button" class="btn btn-outline-secondary btn-sm ms-2" data-bs-dismiss="modal">Close</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <!-- Import IP Modal -->
      <div class="modal fade" id="importIpModal" tabindex="-1" aria-labelledby="importIpModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="importIpModalLabel">Import IP Addresses</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <div class="mb-3">
                <label for="importFile" class="form-label">Select File <span class="text-danger">*</span></label>
                <input type="file" class="form-control" id="importFile" accept=".csv,.xlsx,.xls" required>
                <div class="form-text">Supported formats: CSV, Excel (.xlsx, .xls)</div>
              </div>
              <div class="mb-3">
                <div class="alert alert-info">
                  <h6><i class="bi bi-info-circle"></i> Import Instructions:</h6>
                  <ul class="mb-0">
                    <li>Download the template file first</li>
                    <li>Fill in your IP addresses following the template format</li>
                    <li>Required columns: IP Address, Description, Status</li>
                    <li>Optional columns: Tags, Contacts, System</li>
                    <li>File will be validated before import</li>
                  </ul>
                </div>
              </div>
              <div id="importProgress" class="mb-3" style="display: none;">
                <div class="progress">
                  <div class="progress-bar" role="progressbar" style="width: 0%"></div>
                </div>
                <div class="text-center mt-2">
                  <span id="importStatus">Processing...</span>
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary" id="validateImportBtn" disabled>
                <i class="bi bi-check-circle"></i> Validate File
              </button>
              <button type="button" class="btn btn-success" id="importBtn" disabled style="display: none;">
                <i class="bi bi-upload"></i> Import IPs
              </button>
            </div>
          </div>
        </div>
      </div>
      <form action="/network/ip-address/export" method="GET" style="display:inline;">
        <input type="hidden" name="search" value="<%= typeof search !== 'undefined' ? search : '' %>">
        <% if (typeof filterTags !== 'undefined' && filterTags.length) { filterTags.forEach(function(tag) { %>
          <input type="hidden" name="tags[]" value="<%= tag %>">
        <% }) } %>
        <% if (typeof filterStatus !== 'undefined' && filterStatus) { %>
          <input type="hidden" name="status" value="<%= filterStatus %>">
        <% } %>
        <% if (typeof filterSystems !== 'undefined' && filterSystems.length) { filterSystems.forEach(function(s) { %>
          <input type="hidden" name="systems[]" value="<%= s %>">
        <% }) } %>
        <% if (typeof filterContacts !== 'undefined' && filterContacts.length) { filterContacts.forEach(function(c) { %>
          <input type="hidden" name="contacts[]" value="<%= c %>">
        <% }) } %>
        <button type="submit" class="btn btn-warning btn-sm">
          <i class="bi bi-download"></i> Export
        </button>
      </form>
      <button type="button" class="btn btn-secondary btn-sm ms-2" data-bs-toggle="modal" data-bs-target="#filterIpModal">
        <i class="bi bi-funnel"></i> Filter
      </button>
      <!-- Filter Modal -->
      <div class="modal fade" id="filterIpModal" tabindex="-1" aria-labelledby="filterIpModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
          <div class="modal-content">
            <form id="ipFilterForm" method="get" action="/network/ip-address">
              <!-- Preserve current pageSize and search -->
              <input type="hidden" name="pageSize" value="<%= typeof pageSize !== 'undefined' ? pageSize : 10 %>">
              <input type="hidden" name="search" value="<%= typeof search !== 'undefined' ? search : '' %>">
              <div class="modal-header">
                <h5 class="modal-title" id="filterIpModalLabel">Filter IP Address List</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <div class="row g-2">
                  <div class="col-12 mb-2">
                    <label class="form-label">Systems</label>
                    <select id="filterIpSystems" name="systems[]" class="form-control" multiple></select>
                  </div>
                  <div class="col-12 mb-2">
                    <label class="form-label">Contacts</label>
                    <select id="filterIpContacts" name="contacts[]" class="form-control" multiple></select>
                  </div>
                  <div class="col-12 mb-2">
                    <label class="form-label">Status</label>
                    <select id="filterIpStatus" name="status" class="form-select select2">
                      <option value="">-- All Status --</option>
                      <% (ipStatusOptions || []).forEach(function(opt) { %>
                        <option value="<%= opt.value %>" <%= typeof filterStatus !== 'undefined' && filterStatus === opt.value ? 'selected' : '' %>><%= opt.label %></option>
                      <% }) %>
                    </select>
                  </div>
                  <div class="col-12 mb-2">
                    <label class="form-label">Tags</label>
                    <select id="filterIpTags" name="tags[]" class="form-control" multiple></select>
                  </div>
                </div>
              </div>
              <div class="modal-footer d-flex justify-content-between">
                <button type="button" id="clearFilterBtnIp" class="btn btn-outline-danger btn-sm">Clear All Filters</button>
                <div>
                  <button type="submit" class="btn btn-primary btn-sm">Apply Filter</button>
                  <button type="button" class="btn btn-outline-secondary btn-sm ms-2" data-bs-dismiss="modal">Close</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
      <!-- Filter values for JS (an toàn cho EJS strict) -->
      <div id="filter-data"
        data-tags='<%= JSON.stringify(filterTags || []) %>'
        data-status='<%= typeof filterStatus !== 'undefined' ? JSON.stringify([filterStatus]) : '[]' %>'
        data-systems='<%= JSON.stringify(filterSystems || []) %>'
        data-contacts='<%= JSON.stringify(filterContacts || []) %>' style="display:none"></div>
      <script>
        function restoreSelect2Value($el, values, url) {
          if (!values || !values.length) {
            return;
          }
          $.ajax({
            url: url,
            data: { ids: values },
            dataType: 'json',
            traditional: true,
            xhrFields: { withCredentials: true },
            success: function(data) {
              data.forEach(function(item) {
                if ($el.find('option[value="' + item.id + '"]').length === 0) {
                  var option = new Option(item.text || item.name, item.id, true, true);
                  $el.append(option);
                }
              });
              $el.val(values).trigger('change');
            },
            error: function(xhr, status, error) {
              console.error('Error restoring select2 value:', error, xhr.responseText);
            }
          });
        }
        $(function() {
          var $filterModal = $('#filterIpModal');
          var $modalContent = $filterModal.find('.modal-content');
          var filterValues = {
            tags: JSON.parse(document.getElementById('filter-data').dataset.tags || '[]'),
            status: JSON.parse(document.getElementById('filter-data').dataset.status || '[]'),
            systems: JSON.parse(document.getElementById('filter-data').dataset.systems || '[]'),
            contacts: JSON.parse(document.getElementById('filter-data').dataset.contacts || '[]')
          };
          $('#filterIpTags').select2({
            theme: 'bootstrap-5',
            placeholder: 'Select tag(s)',
            allowClear: true,
            width: '100%',
            dropdownParent: $modalContent,
            ajax: {
              url: '/organize/api/tag',
              dataType: 'json',
              delay: 250,
              data: params => ({ search: params.term }),
              processResults: data => ({ results: data })
            }
          });
          $('#filterIpStatus').select2({
            theme: 'bootstrap-5',
            placeholder: 'Select status',
            allowClear: true,
            width: '100%',
            dropdownParent: $modalContent
          });
          $('#filterIpSystems').select2({
            theme: 'bootstrap-5',
            placeholder: 'Select system(s)',
            allowClear: true,
            width: '100%',
            dropdownParent: $modalContent,
            ajax: {
              url: '/system/api/system',
              dataType: 'json',
              delay: 250,
              data: params => ({ search: params.term }),
              processResults: data => ({ results: data })
            }
          });
          $('#filterIpContacts').select2({
            theme: 'bootstrap-5',
            placeholder: 'Select contact(s)',
            allowClear: true,
            width: '100%',
            dropdownParent: $modalContent,
            ajax: {
              url: '/organize/api/contact',
              dataType: 'json',
              delay: 250,
              data: params => ({ search: params.term }),
              processResults: data => ({ results: data })
            }
          });
          // Restore selected values when modal is shown
          $filterModal.on('shown.bs.modal', function() {
            setTimeout(function() {
              restoreSelect2Value($('#filterIpTags'), filterValues.tags, '/organize/api/tag/ids');
              restoreSelect2Value($('#filterIpSystems'), filterValues.systems, '/organize/api/system/ids');
              restoreSelect2Value($('#filterIpContacts'), filterValues.contacts, '/organize/api/contact/ids');
              if (filterValues.status && filterValues.status.length) {
                $('#filterIpStatus').val(filterValues.status).trigger('change');
              }
            }, 100);
          });
          // Clear Filter button: reset tất cả filter về mặc định
          $('#clearFilterBtnIp').on('click', function() {
            // Clear all select2 values
            $('#filterIpTags').val(null).trigger('change');
            $('#filterIpSystems').val(null).trigger('change');
            $('#filterIpContacts').val(null).trigger('change');
            $('#filterIpStatus').val(null).trigger('change');
            // Close modal
            $filterModal.modal('hide');
            // Redirect to clean URL but preserve pageSize and search
            const currentPageSize = $('select[name="pageSize"]').val() || '10';
            const currentSearch = $('input[name="search"]').val() || '';
            let cleanUrl = '/network/ip-address';
            const params = [];
            if (currentPageSize && currentPageSize !== '10') params.push('pageSize=' + encodeURIComponent(currentPageSize));
            if (currentSearch) params.push('search=' + encodeURIComponent(currentSearch));
            if (params.length > 0) cleanUrl += '?' + params.join('&');
            window.location.href = cleanUrl;
          });
        });
      </script>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title mb-0">IP Addresses List</h3>
        </div>
        <div class="card-body table-responsive p-0">
          <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
            <div id="toast-error" class="toast-error alert alert-danger" style="position:absolute; left:0; right:0; top:0; margin:auto; z-index:9999; min-width:200px; max-width:400px; text-align:center;">
              <%= errorMessage %>
            </div>
            <script>setTimeout(function(){var el=document.getElementById('toast-error');if(el)el.style.display='none';},3000);</script>
          <% } %>
          <% if (typeof successMessage !== 'undefined' && successMessage) { %>
            <!-- <div id="toast-success" class="toast-success alert alert-success" style="position:absolute; left:0; right:0; top:40px; margin:auto; z-index:9999; min-width:200px; max-width:400px; text-align:center;">
              <%= successMessage %>
            </div>
            <script>setTimeout(function(){var el=document.getElementById('toast-success');if(el)el.style.display='none';},3000);</script> -->
          <% } %>
          <table class="table table-hover text-nowrap">
            <thead>
              <tr>
                <th>No.</th>
                <th>IP Address</th>
                <th>Description</th>
                <th>Status</th>
                <th>Tags</th>
                <!-- <th>Created At</th> -->
                <!-- <th>Updated At</th> -->
                <!-- <th>Updated By</th> -->
                <th>Systems</th>
                <th class="text-end">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if (ipList && ipList.length > 0) { %>
                <% ipList.forEach(function(ip, idx) { %>
                  <tr>
                    <td><%= (page - 1) * pageSize + idx + 1 %></td>
                    <td><%= ip.ip_address %></td>
                    <td>
                      <% if (ip.description && ip.description.trim()) { %>
                        <span title="<%= ip.description.replace(/&/g, '&amp;').replace(/"/g, '&quot;').replace(/</g, '&lt;').replace(/>/g, '&gt;') %>">
                          <%= ip.description.length > 60 ? ip.description.substring(0, 60) + '…' : ip.description %>
                        </span>
                      <% } else { %>
                        <span class="text-muted">-</span>
                      <% } %>
                    </td>
                    <td><% if (ip.status) { %><span class="badge bg-secondary"><%= ip.status %></span><% } else { %><span class="text-muted">-</span><% } %></td>
                    <td>
                      <% if (ip.tags && ip.tags.length > 0) { %>
                        <div style="line-height: 1.4;">
                          <% ip.tags.forEach(function(tag, idx) { %>
                            <span class="badge bg-primary text-white" style="font-size:1rem; font-weight:500; padding:0.15em 0.5em; margin: 0.1em 0.1em; display: inline-block;"><%= tag.name %></span>
                            <% if ((idx + 1) % 2 === 0 && idx < ip.tags.length - 1) { %>
                              <br>
                            <% } %>
                          <% }) %>
                        </div>
                      <% } else { %>
                        <span class="text-muted">No tags</span>
                      <% } %>
                    </td>
                    <!-- <td><%= ip.created_at ? (ip.created_at.toLocaleString ? ip.created_at.toLocaleString() : ip.created_at) : '' %></td> -->
                    <!-- <td><%= ip.updated_at ? (ip.updated_at.toLocaleString ? ip.updated_at.toLocaleString() : ip.updated_at) : '' %></td> -->
                    <!-- <td><%= ip.updated_by || '' %></td> -->
                    <td>
                      <% if (ip.systems && ip.systems.length > 0) { %>
                        <div style="line-height: 1.4;">
                          <% ip.systems.forEach(function(system, idx) { %>
                            <a href="/system/system?search=<%= encodeURIComponent(system.name) %>" target="_blank" class="text-primary" style="text-decoration:underline; font-size:0.95em; font-weight:500; display: inline-block; margin: 0.1em 0.1em;">
                              <%= system.name + (system.system_id ? ' (' + system.system_id + ')' : '') %>
                            </a>
                            <% if ((idx + 1) % 2 === 0 && idx < ip.systems.length - 1) { %>
                              <br>
                            <% } %>
                          <% }) %>
                        </div>
                      <% } else { %>
                        <span class="text-muted">No system</span>
                      <% } %>
                    </td>
                    <td class="text-end">
                      <a href="#" class="btn btn-info btn-sm" title="Show" data-bs-toggle="modal" data-bs-target="#ipDetailModal-<%= ip.id %>"><i class="bi bi-eye"></i></a>
                      <button type="button" class="btn btn-warning btn-sm" title="Edit" data-bs-toggle="modal" data-bs-target="#ipEditModal-<%= ip.id %>" <% if (!hasPermission('ip_address.update')) { %>style="display:none"<% } %>><i class="bi bi-pencil"></i></button>
                      <form action="/network/ip-address/<%= ip.id %>?_method=DELETE" method="POST" style="display:inline">
                        <button type="submit" class="btn btn-danger btn-sm" title="Delete" onclick="return confirm('Are you sure?')" <% if (!hasPermission('ip_address.delete')) { %>style="display:none"<% } %>><i class="bi bi-trash"></i></button>
                      </form>
                    </td>
                  </tr>
                  <!-- IP Detail Modal -->
                  <div class="modal fade" id="ipDetailModal-<%= ip.id %>" tabindex="-1" aria-labelledby="ipDetailModalLabel-<%= ip.id %>" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="ipDetailModalLabel-<%= ip.id %>">IP Information</h5>
                          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                          <dl class="row mb-0">
                            <dt class="col-sm-3">IP ID</dt>
                            <dd class="col-sm-9 text-monospace"><%= ip.id %></dd>
                            <dt class="col-sm-3">IP Address</dt>
                            <dd class="col-sm-9"><%= ip.ip_address %></dd>
                            <dt class="col-sm-3">Description</dt>
                            <dd class="col-sm-9"><span class="desc-text"><%- (ip.description || '').replace(/\n/g, '<br>') %></span></dd>
                            <dt class="col-sm-3">Status</dt>
                            <dd class="col-sm-9"><%= ip.status || '' %></dd>
                            <dt class="col-sm-3">Tags</dt>
                            <dd class="col-sm-9">
                              <% if (ip.tags && ip.tags.length > 0) { %>
                                <div style="line-height: 1.4;">
                                  <% ip.tags.forEach(function(tag, idx) { %>
                                    <span class="badge bg-primary text-white" style="font-size:1rem; font-weight:500; padding:0.15em 0.5em; margin: 0.1em 0.1em; display: inline-block;"><%= tag.name %></span>
                                    <% if ((idx + 1) % 2 === 0 && idx < ip.tags.length - 1) { %>
                                      <br>
                                    <% } %>
                                  <% }) %>
                                </div>
                              <% } else { %>
                                <span class="text-muted">No tags</span>
                              <% } %>
                            </dd>
                            <dt class="col-sm-3">Created At</dt>
                            <dd class="col-sm-9"><%= ip.created_at ? (ip.created_at.toLocaleString ? ip.created_at.toLocaleString() : ip.created_at) : '' %></dd>
                            <dt class="col-sm-3">Updated At</dt>
                            <dd class="col-sm-9"><%= ip.updated_at ? (ip.updated_at.toLocaleString ? ip.updated_at.toLocaleString() : ip.updated_at) : '' %></dd>
                            <dt class="col-sm-3">Updated By</dt>
                            <dd class="col-sm-9"><%= ip.updated_by || '' %></dd>
                            <dt class="col-sm-3">Contacts</dt>
                            <dd class="col-sm-9">
                              <% if (ip.contacts && ip.contacts.length > 0) { %>
                                <% ip.contacts.forEach(function(contact, idx) { %>
                                  <% if (contact.email) { %>
                                    <div><a href="/organize/contact?search=<%= encodeURIComponent(contact.email) %>" target="_blank"><%= contact.email %></a></div>
                                  <% } %>
                                <% }) %>
                              <% } else { %>
                                <span class="text-muted">No contacts</span>
                              <% } %>
                            </dd>
                            <dt class="col-sm-3">Systems</dt>
                            <dd class="col-sm-9">
                              <% if (ip.systems && ip.systems.length > 0) { %>
                                <% ip.systems.forEach(function(system) { %>
                                  <div><a href="/system/system?search=<%= encodeURIComponent(system.name) %>" target="_blank"><%= system.name + (system.system_id ? ' (' + system.system_id + ')' : '') %></a></div>
                                <% }) %>
                              <% } else { %>
                                <span class="text-muted">No system</span>
                              <% } %>
                            </dd>
                            <dt class="col-sm-3">Server</dt>
                            <dd class="col-sm-9">
                              <% if (ip.server && ip.server.id) { %>
                                <a href="/server/server/list?search=<%= encodeURIComponent(ip.server.name) %>" target="_blank"><%= ip.server.name %></a>
                              <% } else { %>
                                <span class="text-muted">No server</span>
                              <% } %>
                            </dd>
