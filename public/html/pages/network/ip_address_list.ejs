<div class="container-fluid">
  <form class="input-group mb-3 justify-content-end align-items-center" role="search" method="get" action="/network/ip-address" style="margin-top: 2.5rem; margin-right: 0.5rem; max-width: 500px; margin-left: auto;">
    <input class="form-control rounded-start me-2" type="search" name="search" placeholder="Search IP or Description..." aria-label="Search" value="<%= typeof search !== 'undefined' ? search : '' %>">
    <select class="form-select form-select-sm me-2" name="pageSize" onchange="this.form.submit()" style="width:90px;max-width:90px;">
      <% (pageSizeOptions || [10,20,50]).forEach(function(size) { %>
        <option value="<%= size %>" <%= pageSize == size ? 'selected' : '' %>><%= size %> / page</option>
      <% }) %>
    </select>
    <button class="btn btn-outline-secondary rounded-end" type="submit"><i class="bi bi-search"></i></button>
  </form>
  <div class="row mb-3">
    <div class="col-12 d-flex justify-content-end align-items-center">
      <button type="button" class="btn btn-primary btn-sm me-2" data-bs-toggle="modal" data-bs-target="#addIpModal" <% if (!hasPermission('ip_address.create')) { %>style="display:none"<% } %>>
        <i class="bi bi-plus"></i> Add IP
      </button>
      <!-- Add IP Modal -->
      <div class="modal fade" id="addIpModal" tabindex="-1" aria-labelledby="addIpModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="addIpModalLabel">Add IP Address</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <form id="addIpForm" action="/network/ip-address" method="POST">
                <input type="hidden" name="page" value="<%= page %>">
                <div class="mb-3">
                  <label for="ipAddress" class="form-label">IP Address <span class="text-danger">*</span></label>
                  <input type="text" class="form-control form-control-sm" id="ipAddress" name="address" placeholder="IP Address" required>
                </div>
                <div class="mb-3">
                  <label for="ipDescription" class="form-label">Description</label>
                  <textarea class="form-control form-control-sm" id="ipDescription" name="description" placeholder="Description" rows="2"></textarea>
                </div>
                <div class="mb-3">
                  <label for="ipStatus" class="form-label">Status</label>
                  <select class="form-select form-select-sm" id="ipStatus" name="status">
                    <option value="">-- No status --</option>
                    <% (ipStatusOptions || []).forEach(function(opt) { %>
                      <option value="<%= opt.value %>" <%= typeof filterStatus !== 'undefined' && filterStatus === opt.value ? 'selected' : '' %>><%= opt.label %></option>
                    <% }) %>
                  </select>
                </div>
                <div class="mb-3">
                  <label for="ipTags" class="form-label">Tags</label>
                  <select id="ipTags" name="tags[]" class="form-select form-select-sm select2" multiple></select>
                </div>
                <div class="mb-3">
                  <label for="ipContacts" class="form-label">Contacts</label>
                  <select id="ipContacts" name="contacts[]" class="form-select form-select-sm select2" multiple></select>
                </div>
                <div class="mb-3">
                  <label for="ipSystems" class="form-label">Systems</label>
                  <select id="ipSystems" name="systems[]" class="form-select form-select-sm select2" multiple></select>
                </div>
                <div class="modal-footer d-flex justify-content-end">
                  <button type="submit" class="btn btn-primary btn-sm">Add IP</button>
                  <button type="button" class="btn btn-outline-secondary btn-sm ms-2" data-bs-dismiss="modal">Close</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <form action="/network/ip-address/export" method="GET" style="display:inline;">
        <input type="hidden" name="search" value="<%= typeof search !== 'undefined' ? search : '' %>">
        <% if (typeof filterTags !== 'undefined' && filterTags.length) { filterTags.forEach(function(tag) { %>
          <input type="hidden" name="tags[]" value="<%= tag %>">
        <% }) } %>
        <% if (typeof filterStatus !== 'undefined' && filterStatus) { %>
          <input type="hidden" name="status" value="<%= filterStatus %>">
        <% } %>
        <% if (typeof filterSystems !== 'undefined' && filterSystems.length) { filterSystems.forEach(function(s) { %>
          <input type="hidden" name="systems[]" value="<%= s %>">
        <% }) } %>
        <% if (typeof filterContacts !== 'undefined' && filterContacts.length) { filterContacts.forEach(function(c) { %>
          <input type="hidden" name="contacts[]" value="<%= c %>">
        <% }) } %>
        <button type="submit" class="btn btn-warning btn-sm">
          <i class="bi bi-download"></i> Export
        </button>
      </form>
      <button type="button" class="btn btn-secondary btn-sm ms-2" data-bs-toggle="modal" data-bs-target="#filterIpModal">
        <i class="bi bi-funnel"></i> Filter
      </button>
      <!-- Filter Modal -->
      <div class="modal fade" id="filterIpModal" tabindex="-1" aria-labelledby="filterIpModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
          <div class="modal-content">
            <form id="ipFilterForm" method="get" action="/network/ip-address">
              <div class="modal-header">
                <h5 class="modal-title" id="filterIpModalLabel">Filter IP Address List</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <div class="row g-2">
                  <div class="col-12 mb-2">
                    <label class="form-label">Systems</label>
                    <select id="filterIpSystems" name="systems[]" class="form-select select2" multiple></select>
                  </div>
                  <div class="col-12 mb-2">
                    <label class="form-label">Contacts</label>
                    <select id="filterIpContacts" name="contacts[]" class="form-select select2" multiple></select>
                  </div>
                  <div class="col-12 mb-2">
                    <label class="form-label">Status</label>
                    <select id="filterIpStatus" name="status" class="form-select select2">
                      <option value="">-- All Status --</option>
                      <% (ipStatusOptions || []).forEach(function(opt) { %>
                        <option value="<%= opt.value %>" <%= typeof filterStatus !== 'undefined' && filterStatus === opt.value ? 'selected' : '' %>><%= opt.label %></option>
                      <% }) %>
                    </select>
                  </div>
                  <div class="col-12 mb-2">
                    <label class="form-label">Tags</label>
                    <select id="filterIpTags" name="tags[]" class="form-select select2" multiple></select>
                  </div>
                </div>
              </div>
              <div class="modal-footer d-flex justify-content-end">
                <button type="submit" class="btn btn-primary btn-sm">Apply Filter</button>
                <button type="button" class="btn btn-outline-secondary btn-sm ms-2" data-bs-dismiss="modal">Close</button>
              </div>
            </form>
          </div>
        </div>
      </div>
      <!-- Filter values for JS (an toÃ n cho EJS strict) -->
      <div id="filter-data"
        data-tags='<%= JSON.stringify(filterTags || []) %>'
        data-status='<%= typeof filterStatus !== 'undefined' ? JSON.stringify([filterStatus]) : '[]' %>'
        data-systems='<%= JSON.stringify(filterSystems || []) %>'
        data-contacts='<%= JSON.stringify(filterContacts || []) %>' style="display:none"></div>
      <script>
        function restoreSelect2Value($el, values, url) {
          if (!values || !values.length) return;
          $.ajax({
            url: url,
            data: { ids: values },
            dataType: 'json',
            traditional: true,
            success: function(data) {
              data.forEach(function(item) {
                if ($el.find('option[value="' + item.id + '"]').length === 0) {
                  var option = new Option(item.text || item.name, item.id, true, true);
                  $el.append(option);
                }
              });
              $el.val(values).trigger('change');
            }
          });
        }
        $(function() {
          var $filterModal = $('#filterIpModal');
          var $modalContent = $filterModal.find('.modal-content');
          var filterValues = {
            tags: JSON.parse(document.getElementById('filter-data').dataset.tags || '[]'),
            status: JSON.parse(document.getElementById('filter-data').dataset.status || '[]'),
            systems: JSON.parse(document.getElementById('filter-data').dataset.systems || '[]'),
            contacts: JSON.parse(document.getElementById('filter-data').dataset.contacts || '[]')
          };
          $('#filterIpTags').select2({
            theme: 'bootstrap-5',
            placeholder: 'Select tag(s)',
            allowClear: true,
            width: '100%',
            dropdownParent: $modalContent,
            ajax: {
              url: '/organize/api/tag',
              dataType: 'json',
              delay: 250,
              data: params => ({ search: params.term }),
              processResults: data => ({ results: data })
            }
          });
          $('#filterIpStatus').select2({
            theme: 'bootstrap-5',
            placeholder: 'Select status',
            allowClear: true,
            width: '100%',
            dropdownParent: $modalContent
          });
          $('#filterIpSystems').select2({
            theme: 'bootstrap-5',
            placeholder: 'Select system(s)',
            allowClear: true,
            width: '100%',
            dropdownParent: $modalContent,
            ajax: {
              url: '/system/api/system',
              dataType: 'json',
              delay: 250,
              data: params => ({ search: params.term }),
              processResults: data => ({ results: data })
            }
          });
          $('#filterIpContacts').select2({
            theme: 'bootstrap-5',
            placeholder: 'Select contact(s)',
            allowClear: true,
            width: '100%',
            dropdownParent: $modalContent,
            ajax: {
              url: '/organize/api/contact',
              dataType: 'json',
              delay: 250,
              data: params => ({ search: params.term }),
              processResults: data => ({ results: data })
            }
          });
          // Restore selected values for multi-select filter fields
          restoreSelect2Value($('#filterIpTags'), filterValues.tags, '/organize/api/tag');
          restoreSelect2Value($('#filterIpSystems'), filterValues.systems, '/system/api/system');
          restoreSelect2Value($('#filterIpContacts'), filterValues.contacts, '/organize/api/contact');
          if (filterValues.status && filterValues.status.length) {
            $('#filterIpStatus').val(filterValues.status).trigger('change');
          }
          // Clear Filter button: reset táº¥t cáº£ filter vá» máº·c Äá»nh
          $('#clearFilterBtnIp').on('click', function() {
            window.location.href = '/network/ip-address';
          });
        });
      </script>
    </div>
  </div>
  <div class="row">
