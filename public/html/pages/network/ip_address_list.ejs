        processResults: data => ({ results: data }),
        cache: true
      }
    });
    $('#ipContacts').select2({
      theme: 'bootstrap-5',
      placeholder: 'Select contacts',
      allowClear: true,
      width: '100%',
      ajax: {
        url: '/organize/api/contact',
        dataType: 'json',
        delay: 250,
        data: params => ({ search: params.term }),
        processResults: data => ({ results: data }),
        cache: true
      }
    });
    $('#ipSystems').select2({
      theme: 'bootstrap-5',
      placeholder: 'Select system(s)',
      allowClear: true,
      width: '100%',
      ajax: {
        url: '/system/api/system',
        dataType: 'json',
        delay: 250,
        data: params => ({ search: params.term }),
        processResults: data => ({ results: data }),
        cache: true
      }
    });
  });

  // Real-time validation for multiple IP addresses on blur
  $('#ipAddress').on('blur', function() {
    const ipInput = $(this).val().trim();
    const $input = $(this);
    const $feedback = $input.siblings('.invalid-feedback');
    
    // Remove existing feedback
    $feedback.remove();
    $input.removeClass('is-invalid is-valid');
    
    if (!ipInput) {
      $input.addClass('is-invalid');
      $input.after('<div class="invalid-feedback">Please enter at least one IP address.</div>');
      return;
    }
    
    // Split by comma and validate each IP
    const ipAddresses = ipInput.split(',').map(ip => ip.trim()).filter(ip => ip.length > 0);
    const ipRegex = /^[0-9]{1,3}(\.[0-9]{1,3}){3}$/;
    
    for (const ip of ipAddresses) {
      if (!ipRegex.test(ip)) {
        $input.addClass('is-invalid');
        $input.after(`<div class="invalid-feedback">Invalid IP address format: ${ip}. Please enter valid IPv4 addresses, e.g. 192.168.1.100</div>`);
        return;
      }
      
      // Check for valid IP range (0-255)
      const parts = ip.split('.');
      for (const part of parts) {
        const num = parseInt(part, 10);
        if (num < 0 || num > 255) {
          $input.addClass('is-invalid');
          $input.after(`<div class="invalid-feedback">Invalid IP address: ${ip}. Each octet must be between 0 and 255.</div>`);
          return;
        }
      }
    }
    
    // Check if IPs already exist in database
    checkIPsExist(ipAddresses, $input);
  });

  // Function to check if IPs already exist
  function checkIPsExist(ipAddresses, $input) {
    const promises = ipAddresses.map(ip => {
      return $.ajax({
        url: '/network/api/ip-addresses/detail',
        method: 'GET',
        data: { search: ip },
        dataType: 'json'
      });
    });

    Promise.all(promises).then(responses => {
      const existingIPs = [];
      
      responses.forEach((response, index) => {
        // API returns array, if array has items then IP exists
        if (response && Array.isArray(response) && response.length > 0) {
          existingIPs.push(ipAddresses[index]);
        }
      });

      if (existingIPs.length > 0) {
        $input.addClass('is-invalid');
        const existingList = existingIPs.join(', ');
        const errorMessage = existingIPs.length === 1 
          ? `IP address ${existingList} already exists.`
          : `IP addresses ${existingList} already exist.`;
        $input.after(`<div class="invalid-feedback">${errorMessage}</div>`);
      } else {
        $input.addClass('is-valid');
      }
    }).catch(error => {
      console.error('Error checking IP existence:', error);
      // If API fails, just mark as valid (server will handle validation)
      $input.addClass('is-valid');
    });
  }

  // Also validate on form submit as backup
  $('#addIpForm').on('submit', function(e) {
    const ipInput = $('#ipAddress').val().trim();
    if (!ipInput) {
      e.preventDefault();
      $('#ipAddress').addClass('is-invalid');
      $('#ipAddress').siblings('.invalid-feedback').remove();
      $('#ipAddress').after('<div class="invalid-feedback">Please enter at least one IP address.</div>');
      return false;
    }
    
    // Split by comma and validate each IP
    const ipAddresses = ipInput.split(',').map(ip => ip.trim()).filter(ip => ip.length > 0);
    const ipRegex = /^[0-9]{1,3}(\.[0-9]{1,3}){3}$/;
    
    for (const ip of ipAddresses) {
      if (!ipRegex.test(ip)) {
        e.preventDefault();
        $('#ipAddress').addClass('is-invalid');
        $('#ipAddress').siblings('.invalid-feedback').remove();
        $('#ipAddress').after(`<div class="invalid-feedback">Invalid IP address format: ${ip}. Please enter valid IPv4 addresses, e.g. 192.168.1.100</div>`);
        return false;
      }
      
      // Check for valid IP range (0-255)
      const parts = ip.split('.');
      for (const part of parts) {
        const num = parseInt(part, 10);
        if (num < 0 || num > 255) {
          e.preventDefault();
          $('#ipAddress').addClass('is-invalid');
          $('#ipAddress').siblings('.invalid-feedback').remove();
          $('#ipAddress').after(`<div class="invalid-feedback">Invalid IP address: ${ip}. Each octet must be between 0 and 255.</div>`);
          return false;
        }
      }
    }
    
    return true;
  });

  // Import IP functionality
  let selectedFile = null;
  
  // Debug: Check if elements exist
  console.log('Import file input exists:', $('#importFile').length);
  console.log('Validate button exists:', $('#validateImportBtn').length);
  
  // Handle file selection
  $(document).on('change', '#importFile', function() {
    console.log('File input changed');
    const file = this.files[0];
    console.log('Selected file:', file);
    if (file) {
      selectedFile = file;
      $('#validateImportBtn').prop('disabled', false);
      $('#importBtn').prop('disabled', true).hide();
      console.log('Validate button enabled');
    } else {
      selectedFile = null;
      $('#validateImportBtn').prop('disabled', true);
      $('#importBtn').prop('disabled', true).hide();
      console.log('Validate button disabled');
    }
  });
  
  // Handle validate button click
  $(document).on('click', '#validateImportBtn', function() {
    console.log('Validate button clicked');
    if (!selectedFile) {
      alert('Please select a file first');
      return;
    }
    console.log('Selected file:', selectedFile.name);
    
    const formData = new FormData();
    formData.append('file', selectedFile);
    
    // Show progress
    $('#importProgress').show();
    $('#importStatus').text('Validating file...');
    $('.progress-bar').css('width', '30%');
    
    $.ajax({
      url: '/network/ip-address/validate-import',
      type: 'POST',
      data: formData,
      processData: false,
      contentType: false,
      xhr: function() {
        const xhr = new window.XMLHttpRequest();
        xhr.responseType = 'blob'; // Set responseType here instead
        xhr.upload.addEventListener("progress", function(evt) {
          if (evt.lengthComputable) {
            const percentComplete = evt.loaded / evt.total * 100;
            $('.progress-bar').css('width', percentComplete + '%');
          }
        }, false);
        return xhr;
      },
      success: function(data, status, xhr) {
        $('.progress-bar').css('width', '100%');
        $('#importStatus').text('Validation complete! Downloading results...');
        
        // Handle file download response
        const contentType = xhr.getResponseHeader('Content-Type');
        
        if (contentType && (contentType.includes('spreadsheetml') || contentType.includes('zip'))) {
          // Data is already a blob when responseType is 'blob'
          const url = window.URL.createObjectURL(data);
          const a = document.createElement('a');
          a.href = url;
          
          // Get filename from Content-Disposition header
          const contentDisposition = xhr.getResponseHeader('Content-Disposition');
          let filename = 'ip_validation_results.xlsx'; // default
          if (contentDisposition) {
            const filenameMatch = contentDisposition.match(/filename="([^"]+)"/);
            if (filenameMatch) {
              filename = filenameMatch[1];
            }
          }
          
          a.download = filename;
          document.body.appendChild(a);
          a.click();
          window.URL.revokeObjectURL(url);
          document.body.removeChild(a);
        } else {
          // Handle JSON error response
          try {
            const response = JSON.parse(data);
            alert('Error: ' + (response.error || 'Unknown error'));
          } catch (e) {
            alert('Error: Invalid response format - Content-Type: ' + contentType);
          }
        }
        
        // Check validation results from header
        const validationSummary = xhr.getResponseHeader('X-Validation-Summary');
        if (validationSummary) {
          try {
            const summary = JSON.parse(validationSummary);
            if (summary.allPassed) {
              $('#importBtn').prop('disabled', false).show();
              $('#validateImportBtn').prop('disabled', true);
              $('#importStatus').text(`Validation complete! All ${summary.total} records passed. You can now import.`);
            } else {
              $('#importBtn').prop('disabled', true).hide();
              $('#validateImportBtn').prop('disabled', false);
              $('#importStatus').text(`Validation complete! ${summary.passed}/${summary.total} passed, ${summary.failed} failed. Please fix errors before importing.`);
            }
          } catch (e) {
            // Fallback if header parsing fails
            $('#importBtn').prop('disabled', false).show();
            $('#validateImportBtn').prop('disabled', true);
            $('#importStatus').text('File validated! Please check the downloaded file - only import if all validations are PASS.');
          }
        } else {
          // Fallback if no validation summary header
          $('#importBtn').prop('disabled', false).show();
          $('#validateImportBtn').prop('disabled', true);
          $('#importStatus').text('File validated! Please check the downloaded file - only import if all validations are PASS.');
        }
        
        setTimeout(() => {
          $('#importProgress').hide();
        }, 2000);
      },
      error: function(xhr, status, error) {
        $('#importProgress').hide();
        let errorMessage = 'Validation failed';
        if (xhr.responseJSON && xhr.responseJSON.error) {
          errorMessage = xhr.responseJSON.error;
        }
        alert(errorMessage);
      }
    });
  });
  
  // Handle import button click
  $(document).on('click', '#importBtn', function() {
    if (!selectedFile) {
      alert('Please select a file first');
      return;
    }
    
    if (!confirm('Are you sure you want to import these IP addresses?')) {
      return;
    }
    
    const formData = new FormData();
    formData.append('file', selectedFile);
    
    // Show progress
    $('#importProgress').show();
    $('#importStatus').text('Importing IP addresses...');
    $('.progress-bar').css('width', '30%');
    
    $.ajax({
      url: '/network/ip-address/import',
      type: 'POST',
      data: formData,
      processData: false,
      contentType: false,
      xhr: function() {
        const xhr = new window.XMLHttpRequest();
        xhr.responseType = 'blob'; // Set responseType for binary data
        xhr.upload.addEventListener("progress", function(evt) {
          if (evt.lengthComputable) {
            const percentComplete = evt.loaded / evt.total * 100;
            $('.progress-bar').css('width', percentComplete + '%');
          }
        }, false);
        return xhr;
      },
      success: function(data, status, xhr) {
        $('.progress-bar').css('width', '100%');
        $('#importStatus').text('Import complete! Downloading results...');
        
        // Handle file download response (same as validate)
        const contentType = xhr.getResponseHeader('Content-Type');
        
        if (contentType && contentType.includes('spreadsheetml')) {
          // Data is already a blob when responseType is 'blob'
          const url = window.URL.createObjectURL(data);
          const a = document.createElement('a');
          a.href = url;
          
          // Get filename from Content-Disposition header
          const contentDisposition = xhr.getResponseHeader('Content-Disposition');
          let filename = 'ip_import_results.xlsx'; // default
          if (contentDisposition) {
            const filenameMatch = contentDisposition.match(/filename="([^"]+)"/);
            if (filenameMatch) {
              filename = filenameMatch[1];
            }
          }
          
          a.download = filename;
          document.body.appendChild(a);
          a.click();
          window.URL.revokeObjectURL(url);
          document.body.removeChild(a);
        } else {
          // Handle JSON error response
          try {
            const response = JSON.parse(data);
            alert('Error: ' + (response.error || 'Unknown error'));
          } catch (e) {
            alert('Error: Invalid response format - Content-Type: ' + contentType);
          }
        }
        
        // Reset form and close modal
        resetImportIpForm();
        
        // Close modal and reload page
        $('#importIpModal').modal('hide');
        setTimeout(() => {
          window.location.reload();
        }, 1000);
      },
      error: function(xhr, status, error) {
        $('#importProgress').hide();
        let errorMessage = 'Import failed';
        if (xhr.responseJSON && xhr.responseJSON.error) {
          errorMessage = xhr.responseJSON.error;
        }
        alert(errorMessage);
      }
    });
  });
  
  // Reset form when modal is shown
  $(document).on('show.bs.modal', '#importIpModal', function() {
    resetImportIpForm();
  });
  
  // Also reset when modal is shown
  $(document).on('shown.bs.modal', '#importIpModal', function() {
    resetImportIpForm();
  });
  
  // Reset form when modal is closed
  $(document).on('hidden.bs.modal', '#importIpModal', function() {
    resetImportIpForm();
  });
  
  function resetImportIpForm() {
    // Clear file input completely
    $('#importFile').val('');
    $('#importFile')[0].value = '';
    selectedFile = null;
    $('#validateImportBtn').prop('disabled', true);
    $('#importBtn').prop('disabled', true).hide();
    $('#importProgress').hide();
    
    // Reset form completely
    $('#importIpModal form')[0].reset();
  }
</script>
