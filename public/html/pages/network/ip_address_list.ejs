                              <% if (ip.tags && ip.tags.length > 0) { %>
                                <% ip.tags.forEach(function(tag) { %>
                                  <span class="badge bg-primary text-white" style="font-size:1rem; font-weight:500; padding:0.15em 0.5em;"><%= tag.name %></span>
                                <% }) %>
