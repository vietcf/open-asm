                            <dd class="col-sm-9">
                              <% if (ip.device && ip.device.id) { %>
                                <a href="/device/device?search=<%= encodeURIComponent(ip.device.name) %>" target="_blank"><%= ip.device.name %></a>
                              <% } else { %>
                                <span class="text-muted">No device</span>
                              <% } %>
                            </dd>
                          </dl>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Close</button>
                        </div>
                      </div>
                    </div>
                  </div>
                  <!-- IP Edit Modal -->
                  <div class="modal fade" id="ipEditModal-<%= ip.id %>" tabindex="-1" aria-labelledby="ipEditModalLabel-<%= ip.id %>" aria-hidden="true">
                    <div class="modal-dialog">
