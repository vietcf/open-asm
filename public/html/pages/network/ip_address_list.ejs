<script>
  // Khởi tạo select2 multi-select Add IP giống hệt system_add.ejs
  $(function() {
    $('#ipTags').select2({
      theme: 'bootstrap-5',
      placeholder: 'Select tag(s)',
      allowClear: true,
      width: '100%',
      ajax: {
        url: '/organize/api/tag',
