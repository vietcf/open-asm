            });
            $contacts.trigger('change');
          }
          // Systems
          var systems = $systems.attr('data-selected') ? JSON.parse($systems.attr('data-selected')) : [];
          $systems.val(null).trigger('change');
          $systems.empty();
          if (Array.isArray(systems) && systems.length) {
            systems.forEach(function(system) {
              var text = system.name + (system.system_id ? ' (' + system.system_id + ')' : '');
              if ($systems.find('option[value="' + system.id + '"]').length === 0) {
                var option = new Option(text, system.id, true, true);
                $systems.append(option);
              }
            });
            $systems.trigger('change');
          }
        });
      });
