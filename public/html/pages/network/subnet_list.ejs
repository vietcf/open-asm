  $(document).on('change', '#subnetImportFile', function() {
    const file = this.files[0];
    if (file) {
      selectedFile = file;
      $('#validateSubnetBtn').prop('disabled', false);
      $('#importSubnetBtn').prop('disabled', true).hide();
    } else {
      selectedFile = null;
      $('#validateSubnetBtn').prop('disabled', true);
      $('#importSubnetBtn').prop('disabled', true).hide();
    }
  });
  
  // Handle validate button click
