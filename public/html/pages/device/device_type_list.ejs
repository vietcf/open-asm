<div class="container-fluid">
  <form class="input-group mb-3 justify-content-end align-items-center" role="search" method="get" action="/device/type" style="margin-top: 2.5rem; margin-right: 0.5rem; max-width: 500px; margin-left: auto;">
    <input class="form-control rounded-start me-2" type="search" name="search" placeholder="Search device type..." aria-label="Search" value="<%= search %>">
    <select class="form-select form-select-sm me-2" name="pageSize" onchange="this.form.submit()" style="width:90px;max-width:90px;">
      <% (allowedPageSizes || [10,20,50]).forEach(function(size) { %>
        <option value="<%= size %>" <%= pageSize == size ? 'selected' : '' %>><%= size %> / page</option>
      <% }) %>
    </select>
    <button class="btn btn-outline-secondary rounded-end" type="submit"><i class="bi bi-search"></i></button>
  </form>
  <div class="row mb-3">
    <div class="col-12 position-relative" style="margin-top: 16px;">
      <div class="button-container d-flex justify-content-end align-items-center">
      <% if (hasPermission('device_type.create')) { %>
        <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#addDeviceTypeModal">
          <i class="bi bi-plus"></i> Add Device Type
        </button>
        <a href="/device/type/template" class="btn btn-info btn-sm" download>
          <i class="bi bi-download"></i> Download Template
        </a>
        <button type="button" class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#importDeviceTypeModal">
          <i class="bi bi-upload"></i> Import Device Type
        </button>
      <% } %>
      <% if (hasPermission('device_type.read')) { %>
        <form id="deviceTypeExportForm" action="/device/type/export" method="GET" style="display:inline; margin-right: 8px;">
          <input type="hidden" name="search" value="<%= search %>">
          <button type="submit" class="btn btn-warning btn-sm">
            <i class="bi bi-download"></i> Export
          </button>
        </form>
      <% } %>
      </div>
    </div>
      <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
        <div id="toast-error" class="alert alert-danger position-absolute top-0 end-0" style="margin-top:4px; z-index:999;">
          <%= errorMessage %>
        </div>
        <script>setTimeout(()=>{var el=document.getElementById('toast-error'); if(el) el.remove(); window.history.replaceState({}, '', window.location.pathname);},5000)</script>
      <% } %>
      <% if (typeof successMessage !== 'undefined' && successMessage) { %>
        <div id="toast-success" class="alert alert-success position-absolute top-0 end-0" style="margin-top:4px; z-index:999;">
          <%= successMessage %>
        </div>
        <script>setTimeout(()=>{var el=document.getElementById('toast-success'); if(el) el.remove(); window.history.replaceState({}, '', window.location.pathname);},5000)</script>

<!-- Responsive Tables CSS -->
      <% } %>
      <!-- Add Device Type Modal -->
      <% if (hasPermission('device_type.create')) { %>
        <div class="modal fade" id="addDeviceTypeModal" tabindex="-1" aria-labelledby="addDeviceTypeModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="addDeviceTypeModalLabel">Add Device Type</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <form id="addDeviceTypeForm" action="/device/type" method="POST">
                  <input type="hidden" name="page" value="<%= page %>">
                  <input type="hidden" name="search" value="<%= search %>">
                  <div class="mb-3">
                    <label for="deviceTypeName" class="form-label">Device Type Name <span class="text-danger">*</span></label>
                    <input type="text" class="form-control form-control-sm" id="deviceTypeName" name="name" placeholder="Device Type Name" required>
                  </div>
                  <div class="mb-3">
                    <label for="deviceTypeDescription" class="form-label">Description</label>
                    <input type="text" class="form-control form-control-sm" id="deviceTypeDescription" name="description" placeholder="Description">
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary btn-sm">Add Device Type</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title mb-0">Device Type List</h3>
        </div>
        <div class="card-body table-responsive p-0" style="max-height: 70vh; overflow-y: auto; overflow-x: auto;">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>No.</th>
                <th>Device Type Name</th>
                <th>Description</th>
                <th class="text-end">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if (deviceTypeList && deviceTypeList.length > 0) { %>
                <% deviceTypeList.forEach(function(type, idx) { %>
                  <tr>
                    <td><%= idx + 1 %></td>
                    <td><%= type.name %></td>
                    <td>
                      <% if (type.description && type.description.trim()) { %>
                        <span title="<%= type.description.replace(/&/g, '&amp;').replace(/"/g, '&quot;').replace(/</g, '&lt;').replace(/>/g, '&gt;') %>">
                          <%= type.description.length > 60 ? type.description.substring(0, 60) + 'â€¦' : type.description %>
                        </span>
                      <% } else { %>
                        <span class="text-muted">-</span>
                      <% } %>
                    </td>
                    <td class="text-end">
                      <a href="#" class="btn btn-info btn-sm" title="Show" data-bs-toggle="modal" data-bs-target="#deviceTypeDetailModal-<%= type.id %>"><i class="bi bi-eye"></i></a>
                      <% if (hasPermission('device_type.update')) { %>
                        <a href="#" class="btn btn-warning btn-sm" title="Edit" data-bs-toggle="modal" data-bs-target="#deviceTypeEditModal-<%= type.id %>"><i class="bi bi-pencil"></i></a>
                      <% } %>
                      <% if (hasPermission('device_type.delete')) { %>
                        <form action="/device/type/<%= type.id %>?_method=DELETE" method="POST" style="display:inline" onsubmit="return confirm('Are you sure you want to delete this device type?')">
                          <button type="submit" class="btn btn-danger btn-sm" title="Delete"><i class="bi bi-trash"></i></button>
                        </form>
                      <% } %>
                    </td>
                  </tr>
                  <!-- Device Type Detail Modal -->
                  <div class="modal fade" id="deviceTypeDetailModal-<%= type.id %>" tabindex="-1" aria-labelledby="deviceTypeDetailModalLabel-<%= type.id %>" aria-hidden="true">
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="deviceTypeDetailModalLabel-<%= type.id %>">Device Type Information</h5>
                          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                          <dl class="row mb-0">
                            <dt class="col-sm-4">ID</dt>
                            <dd class="col-sm-8"><%= type.id %></dd>
                            <dt class="col-sm-4">Device Type Name</dt>
                            <dd class="col-sm-8"><%= type.name %></dd>
                            <dt class="col-sm-4">Description</dt>
                            <dd class="col-sm-8"><%= type.description %></dd>
                            <dt class="col-sm-4">Created At</dt>
                            <dd class="col-sm-8"><%= type.created_at ? type.created_at.toLocaleString ? type.created_at.toLocaleString() : type.created_at : '' %></dd>
                            <dt class="col-sm-4">Updated At</dt>
                            <dd class="col-sm-8"><%= type.updated_at ? type.updated_at.toLocaleString ? type.updated_at.toLocaleString() : type.updated_at : '' %></dd>
                          </dl>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Close</button>
                        </div>
                      </div>
                    </div>
                  </div>
                  <!-- Device Type Edit Modal -->
                  <% if (hasPermission('device_type.update')) { %>
                    <div class="modal fade" id="deviceTypeEditModal-<%= type.id %>" tabindex="-1" aria-labelledby="deviceTypeEditModalLabel-<%= type.id %>" aria-hidden="true">
                      <div class="modal-dialog">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h5 class="modal-title" id="deviceTypeEditModalLabel-<%= type.id %>">Edit Device Type</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                          </div>
                          <form action="/device/type/<%= type.id %>?_method=PUT" method="POST">
                            <input type="hidden" name="page" value="<%= page %>">
                            <input type="hidden" name="search" value="<%= search %>">
                            <div class="modal-body">
                              <div class="mb-3">
                                <label class="form-label">Device Type Name</label>
                                <input type="text" class="form-control form-control-sm" name="name" value="<%= type.name %>" readonly>
                              </div>
                              <div class="mb-3">
                                <label class="form-label">Description</label>
                                <input type="text" class="form-control form-control-sm" name="description" value="<%= type.description %>">
                              </div>
                            </div>
                            <div class="modal-footer">
                              <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-dismiss="modal">Close</button>
                              <button type="submit" class="btn btn-primary btn-sm">Save changes</button>
                            </div>
                          </form>
                        </div>
                      </div>
                    </div>
                  <% } %>
                <% }) %>
              <% } else { %>
                <tr><td colspan="4" class="text-center">No data</td></tr>
              <% } %>
            </tbody>
          </table>
        </div>
        <div class="card-footer clearfix">
          <div class="d-flex justify-content-between align-items-center px-3 pb-2" style="padding-top: 1rem;">
            <div>
              <span>Showing <%= startItem %> - <%= endItem %> of <%= totalCount %> device types</span>
            </div>
            <ul class="pagination pagination-sm m-0 float-end">
              <% 
                let startPage = 1;
                let endPage = totalPages;
                if (totalPages > 10) {
                  if (page <= 5) {
                    startPage = 1;
                    endPage = 10;
                  } else if (page + 4 >= totalPages) {
                    startPage = totalPages - 9;
                    endPage = totalPages;
                  } else {
                    startPage = page - 5 + 1;
                    endPage = page + 4;
                  }
                }
              %>
              <li class="page-item <%= page <= 1 ? 'disabled' : '' %>">
                <a class="page-link" href="?search=<%= encodeURIComponent(search || '') %>&page=<%= page - 1 %>" tabindex="-1">Previous</a>
              </li>
              <% if (startPage > 1) { %>
                <li class="page-item"><a class="page-link" href="?search=<%= encodeURIComponent(search || '') %>&page=1">1</a></li>
                <% if (startPage > 2) { %>
                  <li class="page-item disabled"><span class="page-link">...</span></li>
                <% } %>
              <% } %>
              <% for (let i = startPage; i <= endPage; i++) { %>
                <li class="page-item <%= i === page ? 'active' : '' %>"><a class="page-link" href="?search=<%= encodeURIComponent(search || '') %>&page=<%= i %>"><%= i %></a></li>
              <% } %>
              <% if (endPage < totalPages) { %>
                <li class="page-item disabled"><span class="page-link">...</span></li>
                <li class="page-item"><a class="page-link" href="?search=<%= encodeURIComponent(search || '') %>&page=<%= totalPages %>"><%= totalPages %></a></li>
              <% } %>
              <li class="page-item <%= page >= totalPages ? 'disabled' : '' %>">
                <a class="page-link" href="?search=<%= encodeURIComponent(search || '') %>&page=<%= page + 1 %>">Next</a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
