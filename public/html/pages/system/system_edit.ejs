      }
    });
    $('#domain-select').select2({
      theme: 'bootstrap-5',
      placeholder: 'Select domain(s)',
      allowClear: true,
      width: '100%',
      ajax: {
        url: '/network/api/domain',
        dataType: 'json',
        delay: 250,
        data: params => ({ search: params.term }),
        processResults: data => ({ results: data }),
