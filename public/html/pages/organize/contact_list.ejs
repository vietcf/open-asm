<div class="container-fluid">
  <form class="input-group mb-3 justify-content-end align-items-center" role="search" method="get" action="/organize/contact" style="margin-top: 2.5rem; margin-right: 0.5rem; max-width: 500px; margin-left: auto;">
    <input class="form-control rounded-start me-2" type="search" name="search" placeholder="Search name, email..." aria-label="Search" value="<%= search %>">
    <select class="form-select form-select-sm me-2" name="pageSize" onchange="this.form.submit()" style="width:90px;max-width:90px;">
      <% (pageSizeOptions || [10,20,50]).forEach(function(size) { %>
        <option value="<%= size %>" <%= pageSize == size ? 'selected' : '' %>><%= size %> / page</option>
      <% }) %>
    </select>
    <button class="btn btn-outline-secondary rounded-end" type="submit"><i class="bi bi-search"></i></button>
  </form>
  <div class="row mb-3">
    <div class="col-12 d-flex justify-content-end align-items-center position-relative">
      <% if (hasPermission('contact.create')) { %>
        <button type="button" class="btn btn-primary btn-sm me-2" data-bs-toggle="modal" data-bs-target="#addContactModal">
          <i class="bi bi-plus"></i> Add Contact
        </button>
        <a href="/organize/contact/template" class="btn btn-info btn-sm me-2" download>
          <i class="bi bi-download"></i> Download Template
        </a>
        <button type="button" class="btn btn-success btn-sm me-2" data-bs-toggle="modal" data-bs-target="#importContactModal">
          <i class="bi bi-upload"></i> Import Contact
        </button>
        <!-- Add Contact Modal -->
        <div class="modal fade" id="addContactModal" tabindex="-1" aria-labelledby="addContactModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="addContactModalLabel">Add Contact</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <form action="/organize/contact" method="POST">
                <input type="hidden" name="page" value="<%= page %>">
                <input type="hidden" name="search" value="<%= search %>">
                <div class="modal-body">
                  <div class="mb-3">
                    <label class="form-label">Name <span class="text-danger">*</span></label>
                    <input type="text" name="name" class="form-control form-control-sm" required>
                  </div>
                  <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" name="email" class="form-control form-control-sm">
                  </div>
                  <div class="mb-3">
                    <label class="form-label">Phone</label>
                    <input type="text" name="phone" class="form-control form-control-sm">
                  </div>
                  <div class="mb-3">
                    <label class="form-label">Org Unit</label>
                    <select name="unit_id" class="form-select form-select-sm">
                      <option value="">None</option>
                      <% units.forEach(u => { %>
                        <option value="<%= u.id %>"><%= u.name %></option>
                      <% }) %>
                    </select>
                  </div>
                  <div class="mb-3">
                    <label class="form-label">Position <span class="text-danger">*</span></label>
                    <select name="position" class="form-select form-select-sm" required>
                      <option value="MANAGER">MANAGER</option>
                      <option value="STAFF" selected>STAFF</option>
                    </select>
                  </div>
                  <div class="mb-3">
                    <label class="form-label">Description</label>
                    <textarea name="description" class="form-control form-control-sm" rows="2"></textarea>
                  </div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-dismiss="modal">Close</button>
                  <button type="submit" class="btn btn-primary btn-sm">Add Contact</button>
                </div>
              </form>
            </div>
          </div>
        </div>
        
        <!-- Import Contact Modal -->
        <div class="modal fade" id="importContactModal" tabindex="-1" aria-labelledby="importContactModalLabel" aria-hidden="true">
          <div class="modal-dialog modal-lg">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="importContactModalLabel">Import Contacts</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <div class="mb-3">
                  <label for="contactImportFile" class="form-label">Select File</label>
                  <input type="file" class="form-control" id="contactImportFile" accept=".csv,.xlsx,.xls">
                  <div class="form-text">Supported formats: CSV, Excel (.xlsx, .xls). Maximum file size: 10MB</div>
                </div>
                
                <div class="progress mb-3" style="display: none;">
                  <div class="progress-bar" role="progressbar" style="width: 0%"></div>
                </div>
                
                <div id="contactImportResults" class="mb-3" style="display: none;">
                  <div class="alert alert-info">
                    <strong>Validation Results:</strong>
                    <div id="contactValidationSummary"></div>
                  </div>
                </div>
                
              </div>
              <div class="modal-footer">
                <div class="alert alert-info mb-3 w-100">
                  <i class="bi bi-info-circle"></i>
                  <strong>Instructions:</strong>
                  <ol class="mb-0 mt-2">
                    <li>Download the template file using the "Download Template" button above</li>
                    <li>Fill in your contact data following the template format</li>
                    <li>Upload the file to validate before importing</li>
                    <li>Only import if all validations pass</li>
                  </ol>
                </div>
                <div class="d-flex gap-2">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  <button type="button" class="btn btn-warning" id="validateContactFile" disabled>
                    <i class="bi bi-check-circle"></i> Validate File
                  </button>
                  <button type="button" class="btn btn-success" id="importContacts" disabled style="display: none;">
                    <i class="bi bi-upload"></i> Import Contacts
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% } %>
      <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
        <div class="alert alert-danger position-absolute top-0 end-0" style="margin-top:4px; z-index:999;">
          <%= errorMessage %>
        </div>
        <script>setTimeout(()=>{document.querySelector('.alert-danger').remove(); window.history.replaceState({}, '', window.location.pathname);},5000);</script>
      <% } %>
      <% if (typeof successMessage !== 'undefined' && successMessage) { %>
        <div class="alert alert-success position-absolute top-0 end-0" style="margin-top:4px; z-index:999;">
          <%= successMessage %>
        </div>
        <script>setTimeout(()=>{document.querySelector('.alert-success').remove(); window.history.replaceState({}, '', window.location.pathname);},5000);</script>
      <% } %>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title mb-0">Contact List</h3>
        </div>
        <div class="card-body table-responsive p-0">
          <table class="table table-hover text-nowrap">
            <thead>
              <tr>
                <th>No.</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Org Unit</th>
                <th>Position</th>
                <th class="text-end">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if (contactList && contactList.length) { %>
                <% contactList.forEach((c, i) => { %>
                  <tr>
                    <td><%= (page - 1) * 10 + i + 1 %></td>
                    <td><%= c.name %></td>
                    <td><%= c.email %></td>
                    <td><%= c.phone %></td>
                    <td><%= c.unit_name || '' %></td>
                    <td><%= c.position %></td>
                    <td class="text-end">
                      <button class="btn btn-info btn-sm me-1" title="Show Detail" data-bs-toggle="modal" data-bs-target="#showContactModal-<%= c.id %>"><i class="bi bi-eye"></i></button>
                      <% if (hasPermission('contact.update')) { %>
                        <button class="btn btn-warning btn-sm me-1" title="Edit" data-bs-toggle="modal" data-bs-target="#editContactModal-<%= c.id %>"><i class="bi bi-pencil"></i></button>
                      <% } %>
                      <% if (hasPermission('contact.delete')) { %>
                        <form action="/organize/contact/<%= c.id %>?_method=DELETE" method="POST" style="display:inline;">
                          <button type="submit" class="btn btn-danger btn-sm" title="Delete" onclick="return confirm('Are you sure?')"><i class="bi bi-trash"></i></button>
                        </form>
                      <% } %>
                    </td>
                  </tr>
                  <!-- Show Contact Detail Modal -->
                  <div class="modal fade" id="showContactModal-<%= c.id %>" data-phone="<%= c.phone || '' %>" tabindex="-1" aria-labelledby="showContactModalLabel-<%= c.id %>" aria-hidden="true">
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="showContactModalLabel-<%= c.id %>">Contact Detail</h5>
                          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                          <dl class="row mb-0">
                            <dt class="col-sm-4">ID</dt>
                            <dd class="col-sm-8"><%= c.id %></dd>
                            <dt class="col-sm-4">Name</dt>
                            <dd class="col-sm-8"><%= c.name %></dd>
                            <dt class="col-sm-4">Email</dt>
                            <dd class="col-sm-8"><%= c.email %></dd>
                            <dt class="col-sm-4">Phone</dt>
                            <dd class="col-sm-8"><%= c.phone %></dd>
                            <dt class="col-sm-4">Org Unit</dt>
                            <dd class="col-sm-8"><%= c.unit_name || '' %></dd>
                            <dt class="col-sm-4">Position</dt>
                            <dd class="col-sm-8"><%= c.position %></dd>
                            <dt class="col-sm-4">Description</dt>
                            <dd class="col-sm-8">
                              <% if (c.description && c.description.trim()) { %>
                                <div style="white-space: pre-wrap; word-wrap: break-word;"><%= c.description %></div>
                              <% } else { %>
                                <span class="text-muted">No description</span>
                              <% } %>
                            </dd>
                          </dl>
                          <div class="text-center mt-3 contact-image-placeholder" id="contact-image-<%= c.id %>"></div>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-dismiss="modal">Close</button>
                        </div>
                      </div>
                    </div>
                  </div>
                  <!-- Edit Contact Modal -->
                  <% if (hasPermission('contact.update')) { %>
                  <div class="modal fade" id="editContactModal-<%= c.id %>" tabindex="-1" aria-labelledby="editContactModalLabel-<%= c.id %>" aria-hidden="true">
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="editContactModalLabel-<%= c.id %>">Edit Contact</h5>
                          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <form action="/organize/contact/<%= c.id %>?_method=PUT" method="POST">
                          <div class="modal-body">
                            <div class="mb-3"><label class="form-label">Name</label><input type="text" name="name" class="form-control form-control-sm" value="<%= c.name %>" required></div>
                            <div class="mb-3"><label class="form-label">Email</label><input type="email" name="email" class="form-control form-control-sm" value="<%= c.email %>"></div>
                            <div class="mb-3"><label class="form-label">Phone</label><input type="text" name="phone" class="form-control form-control-sm" value="<%= c.phone %>"></div>
                            <div class="mb-3">
                              <label class="form-label">Org Unit</label>
                              <select name="unit_id" class="form-select form-select-sm">
                                <option value="">None</option>
                                <% units.forEach(u => { %>
                                  <option value="<%= u.id %>" <%= u.id === c.unit_id ? 'selected' : '' %>><%= u.name %></option>
                                <% }) %>
                              </select>
                            </div>
                            <div class="mb-3">
                              <label class="form-label">Position</label>
                              <select name="position" class="form-select form-select-sm" required>
                                <option value="MANAGER" <%= c.position === 'MANAGER' ? 'selected' : '' %>>MANAGER</option>
                                <option value="STAFF" <%= c.position === 'STAFF' ? 'selected' : '' %>>STAFF</option>
                              </select>
                            </div>
                            <div class="mb-3">
                              <label class="form-label">Description</label>
                              <textarea name="description" class="form-control form-control-sm" rows="2"><%= c.description || '' %></textarea>
                            </div>
                          </div>
                          <div class="modal-footer">
                            <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary btn-sm">Save Changes</button>
                          </div>
                        </form>
                      </div>
                    </div>
                  </div>
                  <% } %>
                <% }) %>
              <% } else { %>
                <tr><td colspan="7" class="text-center">No contacts found</td></tr>
              <% } %>
            </tbody>
          </table>
        </div>
        <div class="card-footer clearfix">
          <div class="d-flex justify-content-between align-items-center px-3 pb-2" style="padding-top: 1rem;">
            <div>
              <span>Showing <%= startItem %> - <%= endItem %> of <%= totalCount %> contacts</span>
            </div>
            <ul class="pagination pagination-sm m-0 float-end">
              <% 
                let startPage = 1;
                let endPage = totalPages;
                if (totalPages > 10) {
                  if (page <= 5) {
                    startPage = 1;
                    endPage = 10;
                  } else if (page + 4 >= totalPages) {
                    startPage = totalPages - 9;
                    endPage = totalPages;
                  } else {
                    startPage = page - 5 + 1;
                    endPage = page + 4;
                  }
                }
              %>
              <li class="page-item <%= page <= 1 ? 'disabled' : '' %>">
                <a class="page-link" href="?search=<%= encodeURIComponent(search || '') %>&page=<%= page - 1 %>&pageSize=<%= pageSize %>" tabindex="-1">Previous</a>
              </li>
              <% if (startPage > 1) { %>
                <li class="page-item"><a class="page-link" href="?search=<%= encodeURIComponent(search || '') %>&page=1&pageSize=<%= pageSize %>">1</a></li>
                <% if (startPage > 2) { %>
                  <li class="page-item disabled"><span class="page-link">...</span></li>
                <% } %>
              <% } %>
              <% for (let i = startPage; i <= endPage; i++) { %>
                <li class="page-item <%= i === page ? 'active' : '' %>"><a class="page-link" href="?search=<%= encodeURIComponent(search || '') %>&page=<%= i %>&pageSize=<%= pageSize %>"><%= i %></a></li>
              <% } %>
              <% if (endPage < totalPages) { %>
                <li class="page-item disabled"><span class="page-link">...</span></li>
                <li class="page-item"><a class="page-link" href="?search=<%= encodeURIComponent(search || '') %>&page=<%= totalPages %>&pageSize=<%= pageSize %>"><%= totalPages %></a></li>
              <% } %>
              <li class="page-item <%= page >= totalPages ? 'disabled' : '' %>">
                <a class="page-link" href="?search=<%= encodeURIComponent(search || '') %>&page=<%= page + 1 %>&pageSize=<%= pageSize %>">Next</a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
(function() {
  document.addEventListener('DOMContentLoaded', function() {
    document.querySelectorAll('[id^="showContactModal-"]').forEach(function(modalEl) {
      modalEl.addEventListener('show.bs.modal', function (event) {
        var contactId = this.id.replace('showContactModal-', '');
        var imgDiv = document.getElementById('contact-image-' + contactId);
        if (!imgDiv) return;
        
        // Get contact phone from data attribute
        var phoneValue = this.getAttribute('data-phone') || '';
        
        // Only show QR if contact has phone number
        if (!phoneValue || phoneValue.trim() === '') {
          imgDiv.innerHTML = '';
          return;
        }
        
        imgDiv.innerHTML = '<div class="spinner-border text-secondary" role="status" style="width:2rem;height:2rem;"></div>';
        fetch('/organize/api/contact/' + contactId + '/qrcode')
          .then(function(res) { return res.json(); })
          .then(function(data) {
            if (data && data.image && data.mime) {
              imgDiv.innerHTML = '<img src="data:' + data.mime + ';base64,' + data.image + '" alt="QR vCard" class="img-thumbnail" style="max-width:180px;max-height:180px;">' +
                '<div class="small text-muted mt-2">Scan to save to phone contacts</div>';
            } else {
              imgDiv.innerHTML = '<div class="text-danger small">Unable to generate QR code</div>';
            }
          })
          .catch(function() { imgDiv.innerHTML = '<div class="text-danger small">Unable to generate QR code</div>'; });
      });
      // Clear QR when modal is hidden
      modalEl.addEventListener('hidden.bs.modal', function() {
        var contactId = this.id.replace('showContactModal-', '');
        var imgDiv = document.getElementById('contact-image-' + contactId);
        if (imgDiv) imgDiv.innerHTML = '';
      });
    });
  });
})();

// Contact Import functionality
$(document).ready(function() {
  let selectedFile = null;
  
  // File selection handler
  $('#contactImportFile').on('change', function() {
    const file = this.files[0];
    if (file) {
      selectedFile = file;
      $('#validateContactFile').prop('disabled', false);
      $('#contactImportResults').hide();
      $('#importContacts').hide();
    } else {
      selectedFile = null;
      $('#validateContactFile').prop('disabled', true);
      $('#importContacts').prop('disabled', true).hide();
    }
  });
  
  // Validate file handler
  $('#validateContactFile').on('click', function() {
    if (!selectedFile) return;
    
    const formData = new FormData();
    formData.append('file', selectedFile);
    
    $('.progress').show();
    $('.progress-bar').css('width', '0%');
    $('#validateContactFile').prop('disabled', true);
    
    $.ajax({
      url: '/organize/contact/validate-import',
      type: 'POST',
      data: formData,
      processData: false,
      contentType: false,
      xhr: function() {
        const xhr = new window.XMLHttpRequest();
        xhr.upload.addEventListener('progress', function(evt) {
          if (evt.lengthComputable) {
            const percentComplete = (evt.loaded / evt.total) * 100;
            $('.progress-bar').css('width', percentComplete + '%');
          }
        }, false);
        return xhr;
      },
      success: function(data, textStatus, xhr) {
        $('.progress').hide();
        $('#validateContactFile').prop('disabled', false);
        
        // Parse validation summary from header
        const summaryHeader = xhr.getResponseHeader('X-Validation-Summary');
        let summary = null;
        if (summaryHeader) {
          try {
            summary = JSON.parse(summaryHeader);
          } catch (e) {
            console.error('Error parsing validation summary:', e);
          }
        }
        
        if (summary) {
          $('#contactValidationSummary').html(`
            Total Rows: ${summary.totalRows} | 
            Passed: ${summary.passedRows} | 
            Failed: ${summary.failedRows}
          `);
          $('#contactImportResults').show();
          
          if (summary.allPassed) {
            $('#importContacts').prop('disabled', false).show();
          } else {
            $('#importContacts').prop('disabled', true).hide();
          }
        }
        
        // Auto-download validation file
        if (data.validation_file) {
          const link = document.createElement('a');
          link.href = data.validation_file;
          link.download = '';
          document.body.appendChild(link);
          link.click();
          document.body.removeChild(link);
        }
      },
      error: function(xhr) {
        $('.progress').hide();
        $('#validateContactFile').prop('disabled', false);
        
        let errorMessage = 'Validation failed';
        if (xhr.responseJSON && xhr.responseJSON.error) {
          errorMessage = xhr.responseJSON.error;
        }
        
        $('#contactValidationSummary').html(`<span class="text-danger">${errorMessage}</span>`);
        $('#contactImportResults').show();
        $('#importContacts').prop('disabled', true).hide();
      }
    });
  });
  
  // Import contacts handler
  $('#importContacts').on('click', function() {
    if (!selectedFile) return;
    
    const formData = new FormData();
    formData.append('file', selectedFile);
    
    $('.progress').show();
    $('.progress-bar').css('width', '0%');
    $('#importContacts').prop('disabled', true);
    
    $.ajax({
      url: '/organize/contact/import',
      type: 'POST',
      data: formData,
      processData: false,
      contentType: false,
      xhr: function() {
        const xhr = new window.XMLHttpRequest();
        xhr.upload.addEventListener('progress', function(evt) {
          if (evt.lengthComputable) {
            const percentComplete = (evt.loaded / evt.total) * 100;
            $('.progress-bar').css('width', percentComplete + '%');
          }
        }, false);
        return xhr;
      },
      success: function(data) {
        $('.progress').hide();
        $('#importContacts').prop('disabled', false);
        
        if (data.summary) {
          $('#contactValidationSummary').html(`
            <strong>Import Completed!</strong><br>
            Total Rows: ${data.summary.totalRows} | 
            Success: ${data.summary.successRows} | 
            Skipped: ${data.summary.skippedRows} | 
            Failed: ${data.summary.failedRows}
          `);
          $('#contactImportResults').show();
        }
        
        // Auto-download import results file
        if (data.import_file) {
          const link = document.createElement('a');
          link.href = data.import_file;
          link.download = '';
          document.body.appendChild(link);
          link.click();
          document.body.removeChild(link);
        }
        
        // Refresh page after successful import
        setTimeout(() => {
          window.location.reload();
        }, 2000);
      },
      error: function(xhr) {
        $('.progress').hide();
        $('#importContacts').prop('disabled', false);
        
        let errorMessage = 'Import failed';
        if (xhr.responseJSON && xhr.responseJSON.error) {
          errorMessage = xhr.responseJSON.error;
        }
        
        $('#contactValidationSummary').html(`<span class="text-danger">${errorMessage}</span>`);
        $('#contactImportResults').show();
      }
    });
  });
  
  // Reset modal when closed
  $('#importContactModal').on('hidden.bs.modal', function() {
    $('#contactImportFile').val('');
    selectedFile = null;
    $('#validateContactFile').prop('disabled', true);
    $('#importContacts').prop('disabled', true).hide();
    $('#contactImportResults').hide();
    $('.progress').hide();
  });
});
</script>