<div class="container-fluid">
  <form class="input-group mb-3 justify-content-end align-items-center" role="search" method="get" action="/organize/tag" style="margin-top: 2.5rem; margin-right: 0.5rem; max-width: 500px; margin-left: auto;">
    <input class="form-control rounded-start me-2" type="search" name="search" placeholder="Search tag..." aria-label="Search" value="<%= search %>">
    <select class="form-select form-select-sm me-2" name="pageSize" onchange="this.form.submit()" style="width:90px;max-width:90px;">
      <% (pageSizeOptions || [10,20,50]).forEach(function(size) { %>
        <option value="<%= size %>" <%= pageSize == size ? 'selected' : '' %>><%= size %> / page</option>
      <% }) %>
    </select>
    <button class="btn btn-outline-secondary rounded-end" type="submit"><i class="bi bi-search"></i></button>
  </form>
  <div class="row mb-3">
    <div class="col-12 d-flex justify-content-end align-items-center position-relative">
      <% if (hasPermission('tag.create')) { %>
      <button type="button" class="btn btn-primary btn-sm me-2" data-bs-toggle="modal" data-bs-target="#addTagModal">
        <i class="bi bi-plus"></i> Add Tag
      </button>
      <!-- Add Tag Modal -->
      <div class="modal fade" id="addTagModal" tabindex="-1" aria-labelledby="addTagModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="addTagModalLabel">Add Tag</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="/organize/tag" method="POST" onsubmit="return validateTagForm(this)">
              <div class="modal-body">
                <div class="mb-3">
                  <label class="form-label">Tag Name <span class="text-danger">*</span></label>
                  <input type="text" name="name" class="form-control form-control-sm" required>
                </div>
                <div class="mb-3">
                  <label class="form-label">Description</label>
                  <input type="text" name="description" class="form-control form-control-sm">
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary btn-sm">Add Tag</button>
              </div>
            </form>
          </div>
        </div>
      </div>
      <% } %>
      <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
        <div class="alert alert-danger position-absolute top-0 end-0" style="margin-top:4px; z-index:999;">
          <%= errorMessage %>
        </div>
        <script>setTimeout(()=>{document.querySelector('.alert-danger').remove(); window.history.replaceState({}, '', window.location.pathname);},5000);</script>
      <% } %>
      <% if (typeof successMessage !== 'undefined' && successMessage) { %>
        <div class="alert alert-success position-absolute top-0 end-0" style="margin-top:4px; z-index:999;">
          <%= successMessage %>
        </div>
        <script>setTimeout(()=>{document.querySelector('.alert-success').remove(); window.history.replaceState({}, '', window.location.pathname);},5000);</script>
      <% } %>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title mb-0">Tag List</h3>
        </div>
        <div class="card-body table-responsive p-0">
          <table class="table table-hover text-nowrap">
            <thead>
              <tr>
                <th>#</th>
                <th>Tag Name</th>
                <th>Description</th>
                <th class="text-end">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if (tagList && tagList.length) { %>
                <% tagList.forEach((tag, i) => { %>
                  <tr>
                    <td><%= (page - 1) * pageSize + i + 1 %></td>
                    <td><%= tag.name %></td>
                    <td><%= tag.description %></td>
                    <td class="text-end">
                      <button class="btn btn-info btn-sm me-1" title="Show Detail" data-bs-toggle="modal" data-bs-target="#showTagModal-<%= tag.id %>"><i class="bi bi-eye"></i></button>
                      <% if (hasPermission('tag.update')) { %>
                        <button class="btn btn-warning btn-sm me-1" data-bs-toggle="modal" data-bs-target="#editTagModal-<%= tag.id %>"><i class="bi bi-pencil"></i></button>
                      <% } %>
                      <% if (hasPermission('tag.delete')) { %>
                        <form action="/organize/tag/<%= tag.id %>?_method=DELETE" method="POST" style="display:inline;">
                          <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this tag?')"><i class="bi bi-trash"></i></button>
                        </form>
                      <% } %>
                    </td>
                  </tr>
                  <!-- Show Tag Detail Modal -->
                  <div class="modal fade" id="showTagModal-<%= tag.id %>" tabindex="-1" aria-labelledby="showTagModalLabel-<%= tag.id %>" aria-hidden="true">
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="showTagModalLabel-<%= tag.id %>">Tag Detail</h5>
                          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                          <dl class="row mb-0">
                            <dt class="col-sm-4">ID</dt>
                            <dd class="col-sm-8"><%= tag.id %></dd>
                            <dt class="col-sm-4">Name</dt>
                            <dd class="col-sm-8"><%= tag.name %></dd>
                            <dt class="col-sm-4">Description</dt>
                            <dd class="col-sm-8"><%= tag.description %></dd>
                          </dl>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-dismiss="modal">Close</button>
                        </div>
                      </div>
                    </div>
                  </div>
                  <!-- Edit Tag Modal -->
                  <% if (hasPermission('tag.update')) { %>
                  <div class="modal fade" id="editTagModal-<%= tag.id %>" tabindex="-1" aria-labelledby="editTagModalLabel-<%= tag.id %>" aria-hidden="true">
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="editTagModalLabel-<%= tag.id %>">Edit Tag</h5>
                          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <form action="/organize/tag/<%= tag.id %>?_method=PUT" method="POST" onsubmit="return validateTagForm(this)">
                          <div class="modal-body">
                            <div class="mb-3"><label class="form-label">Tag Name <span class="text-danger">*</span></label><input type="text" name="name" class="form-control form-control-sm" value="<%= tag.name %>" required></div>
                            <div class="mb-3"><label class="form-label">Description</label><input type="text" name="description" class="form-control form-control-sm" value="<%= tag.description %>"></div>
                          </div>
                          <div class="modal-footer">
                            <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary btn-sm">Save Changes</button>
                          </div>
                        </form>
                      </div>
                    </div>
                  </div>
                  <% } %>
                <% }) %>
              <% } else { %>
                <tr><td colspan="4" class="text-center">No tags found</td></tr>
              <% } %>
            </tbody>
          </table>
        </div>
        <div class="card-footer clearfix">
          <div class="d-flex justify-content-between align-items-center px-3 pb-2" style="padding-top: 1rem;">
            <div>
              <span>Showing <%= startItem %> - <%= endItem %> of <%= totalCount %> accounts</span>
            </div>
            <ul class="pagination pagination-sm m-0 float-end">
              <% 
                let startPage = 1;
                let endPage = totalPages;
                if (totalPages > 10) {
                  if (page <= 5) {
                    startPage = 1;
                    endPage = 10;
                  } else if (page + 4 >= totalPages) {
                    startPage = totalPages - 9;
                    endPage = totalPages;
                  } else {
                    startPage = page - 5 + 1;
                    endPage = page + 4;
                  }
                }
              %>
              <li class="page-item <%= page <= 1 ? 'disabled' : '' %>">
                <a class="page-link" href="?search=<%= encodeURIComponent(search || '') %>&page=<%= page - 1 %>&pageSize=<%= pageSize %>" tabindex="-1">Previous</a>
              </li>
              <% if (startPage > 1) { %>
                <li class="page-item"><a class="page-link" href="?search=<%= encodeURIComponent(search || '') %>&page=1&pageSize=<%= pageSize %>">1</a></li>
                <% if (startPage > 2) { %>
                  <li class="page-item disabled"><span class="page-link">...</span></li>
                <% } %>
              <% } %>
              <% for (let i = startPage; i <= endPage; i++) { %>
                <li class="page-item <%= i === page ? 'active' : '' %>"><a class="page-link" href="?search=<%= encodeURIComponent(search || '') %>&page=<%= i %>&pageSize=<%= pageSize %>"><%= i %></a></li>
              <% } %>
              <% if (endPage < totalPages) { %>
                <li class="page-item disabled"><span class="page-link">...</span></li>
                <li class="page-item"><a class="page-link" href="?search=<%= encodeURIComponent(search || '') %>&page=<%= totalPages %>&pageSize=<%= pageSize %>"><%= totalPages %></a></li>
              <% } %>
              <li class="page-item <%= page >= totalPages ? 'disabled' : '' %>">
                <a class="page-link" href="?search=<%= encodeURIComponent(search || '') %>&page=<%= page + 1 %>&pageSize=<%= pageSize %>">Next</a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
function validateTagForm(form) {
  var nameInput = form.querySelector('[name="name"]');
  if (nameInput) {
    nameInput.value = nameInput.value.trim();
    if (!nameInput.value) {
      nameInput.classList.add('is-invalid');
      nameInput.focus();
      return false;
    } else {
      nameInput.classList.remove('is-invalid');
    }
  }
  return true;
}
</script>
