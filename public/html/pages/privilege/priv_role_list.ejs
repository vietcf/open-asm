<script>
function showToast(msg, type) {
  const toast = document.createElement('div');
  toast.className = `alert alert-${type}`;
  toast.style.position = 'fixed';
  toast.style.top = '16px';
  toast.style.right = '16px';
  toast.style.zIndex = 9999;
  toast.style.minWidth = '200px';
  toast.innerText = msg;
  document.body.appendChild(toast);
  setTimeout(() => toast.remove(), 3000);
}
</script>
<% if (success) { %>
  <script>
    window.addEventListener('DOMContentLoaded', function() {
      showToast('<%= success %>', 'success');
    });
  </script>
<% } %>
<% if (error) { %>
  <script>
    window.addEventListener('DOMContentLoaded', function() {
      showToast('<%= error %>', 'danger');
    });
  </script>
<% } %>
<script>
$(function() {
  // Add Privileged Role Modal: System select2
  $('#privRoleSystem').select2({
    theme: 'bootstrap-5',
    placeholder: 'Select system',
    width: '100%',
    allowClear: true,
    dropdownParent: $('#addPrivRoleModal'),
    ajax: {
      url: '/system/api/system',
      dataType: 'json',
      delay: 250,
      data: params => ({ search: params.term }),
      processResults: data => ({ results: data }),
      cache: true
    }
  });
  // Khi chọn system thì load permission theo system
  $('#privRoleSystem').on('change', function() {
    var systemId = $(this).val();
    if (systemId) {
      $.ajax({
        url: '/priv-account/api/permissions',
        data: { system_id: systemId },
        dataType: 'json',
        success: function(perms) {
          var html = '';
          if (perms && perms.length) {
            perms.forEach(function(perm) {
              html += '<div class="form-check form-check-inline">';
              html += '<input class="form-check-input" type="checkbox" name="permissions" value="' + perm.id + '">';
              html += '<label class="form-check-label">' + perm.name + '</label>';
              html += '</div>';
            });
            $('#privRolePermissionsWrapper').show();
          } else {
            html = '<span class="text-muted">No permission</span>';
            $('#privRolePermissionsWrapper').show();
          }
          $('#privRolePermissions').html(html);
        },
        error: function() {
          $('#privRolePermissions').html('<span class="text-danger">Failed to load permissions</span>');
          $('#privRolePermissionsWrapper').show();
        }
      });
    } else {
      $('#privRolePermissions').html('');
      $('#privRolePermissionsWrapper').hide();
    }
  });
  // Ẩn permission khi mở modal add mới
  $('#addPrivRoleModal').on('show.bs.modal', function() {
    $('#privRolePermissions').html('');
    $('#privRolePermissionsWrapper').hide();
    $('#privRoleSystem').val(null).trigger('change');
  });
  // ================== EDIT PRIVILEGED ROLE MODAL ==================
  // Khởi tạo select2 cho system (CHỈ GỌI 1 LẦN)
  $('#editRoleSystem').select2({
    theme: 'bootstrap-5',
    placeholder: 'Select system',
    width: '100%',
    allowClear: true,
    dropdownParent: $('#privRoleEditModal'),
    ajax: {
      url: '/system/api/system',
      dataType: 'json',
      delay: 250,
      data: params => ({ search: params.term }),
      processResults: data => ({ results: data }),
      cache: true
    }
  });
  // Khi nhấn Edit, fill dữ liệu vào modal
  $(document).on('click', '.btn-edit-priv-role', function(e) {
    // Đóng mọi modal đang mở trước khi mở modal Edit
    $('.modal.show').modal('hide');
    var roleId = $(this).data('role-id');
    var role = privRoleList.find(r => r.id == roleId);
    if (!role) return;
    $('#editPrivRoleForm').attr('action', '/priv-account/role/' + role.id + '?_method=PUT');
    $('#editRoleId').val(role.id);
    $('#editRoleName').val(role.name);
    $('#editRoleDescription').val(role.description);
    // System select2: clear và append option nếu có
    var $systemSelect = $('#editRoleSystem');
    $systemSelect.val(null).trigger('change');
    $systemSelect.find('option').remove();
    if (role.system && role.system.id && role.system.name) {
      var option = new Option(role.system.name, role.system.id, true, true);
      $systemSelect.append(option).trigger('change');
    }
    // Load permissions
    loadEditRolePermissions(role.system ? role.system.id : '', role.permissions ? role.permissions.map(p => p.id) : []);
    // Đợi modal cũ đóng xong mới mở modal Edit (nếu có modal khác đang mở)
    setTimeout(function() {
      $('#privRoleEditModal').modal('show');
    }, 300);
  });
  // Khi đổi system thì load lại permission
  $('#editRoleSystem').on('change', function() {
    var systemId = $(this).val();
    loadEditRolePermissions(systemId, []);
  });
  function loadEditRolePermissions(systemId, checkedIds) {
    var $permDiv = $('#editRolePermissions');
    $permDiv.html('<span class="text-muted">Loading...</span>');
    if (!systemId) {
      $permDiv.html('<span class="text-muted">Select a system first</span>');
      return;
    }
    $.ajax({
      url: '/priv-account/api/permissions',
      data: { system_id: systemId },
      dataType: 'json',
      success: function(perms) {
        var html = '';
        if (perms && perms.length) {
          perms.forEach(function(perm) {
            var checked = checkedIds && checkedIds.includes(perm.id) ? 'checked' : '';
            html += '<div class="form-check form-check-inline">';
            html += '<input class="form-check-input" type="checkbox" name="permissions" value="' + perm.id + '" ' + checked + ' id="editPerm-' + perm.id + '">';
            html += '<label class="form-check-label" for="editPerm-' + perm.id + '">' + perm.name + '</label>';
            html += '</div>';
          });
        } else {
          html = '<span class="text-muted">No permissions for this system</span>';
        }
        $permDiv.html(html);
      },
      error: function() {
        $permDiv.html('<span class="text-danger">Failed to load permissions</span>');
      }
    });
  }
  // Validate trước khi submit
  $('#editPrivRoleForm').on('submit', function(e) {
    var checked = $(this).find('input[name="permissions"]:checked');
    if (checked.length === 0) {
      alert('Bạn phải chọn ít nhất 1 permission!');
      e.preventDefault();
      return false;
    }
  });
  // Filter Privileged Role Modal: System and Permission select2
  $('#filterSystem').select2({
    theme: 'bootstrap-5',
    placeholder: 'Select system',
    width: '100%',
    allowClear: true,
    ajax: {
      url: '/system/api/system',
      dataType: 'json',
      delay: 250,
      data: params => ({ search: params.term }),
      processResults: data => ({ results: data }),
      cache: true
    }
  });
  <% (allPermissions || []).forEach(function(perm) { %>
    $('#filterPermission-<%= perm.id %>').select2({
      theme: 'bootstrap-5',
      placeholder: 'Select permission',
      width: '100%',
      allowClear: true,
      ajax: {
        url: '/permission/api/permission',
        dataType: 'json',
        delay: 250,
        data: params => ({ search: params.term }),
        processResults: data => ({ results: data }),
        cache: true
      }
    });
  <% }) %>
  // Filter modal: system select2
  $('#filterRoleSystemId').select2({
    theme: 'bootstrap-5',
    placeholder: 'Select system',
    width: '100%',
    allowClear: true,
    dropdownParent: $('#filterPrivRoleModal'),
    ajax: {
      url: '/system/api/system',
      dataType: 'json',
      delay: 250,
      data: params => ({ search: params.term }),
      processResults: data => ({ results: data }),
      cache: true
    }
  });
  // Persist filter values when opening modal
  $('#filterPrivRoleModal').on('shown.bs.modal', function() {
    var systemId = '<%= typeof system_id !== 'undefined' ? system_id : '' %>';
    var systemName = '<%= typeof system_name !== 'undefined' ? system_name : '' %>';
    if (systemId && systemName) {
      var option = new Option(systemName, systemId, true, true);
      $('#filterRoleSystemId').empty().append(option).trigger('change');
    } else {
      $('#filterRoleSystemId').val(null).trigger('change');
    }
  });
  // Open filter modal
  $('#filterPrivRoleBtn').on('click', function() {
    $('#filterPrivRoleModal').modal('show');
  });
  // Clear filter button
  $('#clearPrivRoleFilterBtn').on('click', function() {
    // Clear select2
    $('#filterRoleSystemId').val(null).trigger('change');
    // Redirect to unfiltered list
    window.location.href = '/priv-account/role';
  });
});
</script>
