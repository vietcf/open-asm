<div class="container-fluid">
  <form class="input-group mb-3 justify-content-end align-items-center" role="search" method="get" action="/priv-account/role" style="margin-top: 2.5rem; margin-right: 0.5rem; max-width: 500px; margin-left: auto;">
    <input class="form-control rounded-start me-2" type="search" name="search" placeholder="Search role name or description..." aria-label="Search" value="<%= typeof search !== 'undefined' ? search : '' %>">
    <select class="form-select form-select-sm me-2" name="pageSize" onchange="this.form.submit()" style="width:90px;max-width:90px;">
      <% (allowedPageSizes || [10,20,50]).forEach(function(size) { %>
        <option value="<%= size %>" <%= pageSize == size ? 'selected' : '' %>><%= size %> / page</option>
      <% }) %>
    </select>
    <button class="btn btn-outline-secondary rounded-end" type="submit"><i class="bi bi-search"></i></button>
  </form>
  <div class="row mb-3">
    <div class="col-12 d-flex justify-content-end align-items-center" style="margin-top: 16px; gap: 8px;">
      <% if (hasPermission('priv_role.create')) { %>
      <button type="button" class="btn btn-primary btn-sm me-2" data-bs-toggle="modal" data-bs-target="#addPrivRoleModal">
        <i class="bi bi-plus"></i> Add Privileged Role
      </button>
      <% } %>
      <form method="GET" action="/priv-account/role/export" style="display:inline;" class="me-2" id="exportPrivRoleForm">
        <input type="hidden" name="search" value="<%= typeof search !== 'undefined' ? search : '' %>">
        <input type="hidden" name="system_id" value="<%= typeof system_id !== 'undefined' ? system_id : '' %>">
        <button type="submit" class="btn btn-warning btn-sm">
          <i class="bi bi-download"></i> Export
        </button>
      </form>
      <button type="button" class="btn btn-secondary btn-sm" id="filterPrivRoleBtn" data-bs-toggle="modal" data-bs-target="#filterPrivRoleModal">
        <i class="bi bi-funnel"></i> Filter
      </button>
      <!-- Add Privileged Role Modal -->
      <div class="modal fade" id="addPrivRoleModal" tabindex="-1" aria-labelledby="addPrivRoleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="addPrivRoleModalLabel">Add Privileged Role</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <form id="addPrivRoleForm" action="/priv-account/role" method="POST" autocomplete="off">
                <div class="mb-3">
                  <label for="privRoleName" class="form-label">Role Name <span class="text-danger">*</span></label>
                  <input type="text" class="form-control form-control-sm" id="privRoleName" name="name" placeholder="Role Name" required>
                </div>
                <div class="mb-3">
                  <label for="privRoleDescription" class="form-label">Description</label>
                  <textarea class="form-control form-control-sm" id="privRoleDescription" name="description" placeholder="Description" rows="2"></textarea>
                </div>
                <div class="mb-3">
                  <label for="privRoleSystem" class="form-label">System <span class="text-danger">*</span></label>
                  <select id="privRoleSystem" name="system_id" class="form-select form-select-sm" required style="width:100%"></select>
                </div>
                <div class="mb-3" id="privRolePermissionsWrapper" style="display:none;">
                  <label class="form-label">Permissions</label>
                  <div id="privRolePermissions"></div>
                </div>
              </form>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-dismiss="modal">Close</button>
              <button type="submit" class="btn btn-primary btn-sm" form="addPrivRoleForm">Add Role</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title mb-0">Privileged Role List</h3>
        </div>
        <div class="card-body table-responsive p-0">
          <table class="table table-hover text-nowrap">
            <thead>
              <tr>
                <th>No.</th>
                <th>Role Name</th>
                <th>Description</th>
                <th>System</th>
                <th class="text-end">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if (privRoleList && privRoleList.length > 0) { %>
                <% privRoleList.forEach(function(role, idx) { %>
                  <tr>
                    <td><%= (page - 1) * 10 + idx + 1 %></td>
                    <td><%= role.name %></td>
                    <td><%= role.description %></td>
                    <td><%= role.system && role.system.name ? role.system.name : '' %></td>
                    <td class="text-end">
                      <a href="#" class="btn btn-info btn-sm" title="Show" data-bs-toggle="modal" data-bs-target="#privRoleDetailModal-<%= role.id %>"><i class="bi bi-eye"></i></a>
                      <% if (hasPermission('priv_role.update')) { %>
                      <a href="#" class="btn btn-warning btn-sm btn-edit-priv-role" title="Edit" data-role-id="<%= role.id %>" data-bs-toggle="modal" data-bs-target="#privRoleEditModal"><i class="bi bi-pencil"></i></a>
                      <% } %>
                      <% if (hasPermission('priv_role.delete')) { %>
                      <form action="/priv-account/role/<%= role.id %>?_method=DELETE" method="POST" style="display:inline">
                        <button type="submit" class="btn btn-danger btn-sm" title="Delete" onclick="return confirm('Are you sure you want to delete?')"><i class="bi bi-trash"></i></button>
                      </form>
                      <% } %>
                    </td>
                  </tr>
                  <!-- Privileged Role Detail Modal -->
                  <div class="modal fade" id="privRoleDetailModal-<%= role.id %>" tabindex="-1" aria-labelledby="privRoleDetailModalLabel-<%= role.id %>" aria-hidden="true">
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="privRoleDetailModalLabel-<%= role.id %>">Privileged Role Information</h5>
                          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                          <dl class="row mb-0">
                            <dt class="col-sm-4">Role Name</dt>
                            <dd class="col-sm-8"><%= role.name || '<span class="text-muted">No data</span>' %></dd>
                            <dt class="col-sm-4">Description</dt>
                            <dd class="col-sm-8"><%= role.description || '<span class="text-muted">No data</span>' %></dd>
                            <dt class="col-sm-4">Permissions</dt>
                            <dd class="col-sm-8">
                              <% if (role.permissions && role.permissions.length > 0) { %>
                                <% role.permissions.forEach(function(perm) { %>
                                  <div class="text-lowercase"><%= perm.name ? perm.name.toLowerCase() : '' %></div>
                                <% }) %>
                              <% } else { %>
                                <span class="text-muted">No permission</span>
                              <% } %>
                            </dd>
                            <dt class="col-sm-4">System</dt>
                            <dd class="col-sm-8"><%= (role.system && role.system.name) ? role.system.name : (role.system_id || '<span class="text-muted">No data</span>') %></dd>
                            <dt class="col-sm-4">Created At</dt>
                            <dd class="col-sm-8"><%= role.created_at ? new Date(role.created_at).toLocaleString() : '<span class="text-muted">No data</span>' %></dd>
                            <dt class="col-sm-4">Updated At</dt>
                            <dd class="col-sm-8"><%= role.updated_date ? new Date(role.updated_date).toLocaleString() : '<span class="text-muted">No data</span>' %></dd>
                            <dt class="col-sm-4">Updated By</dt>
                            <dd class="col-sm-8"><%= role.updated_by || '<span class="text-muted">No data</span>' %></dd>
                          </dl>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Close</button>
                        </div>
                      </div>
                    </div>
                  </div>
                  <!-- Privileged Permission Detail Modal -->
                  <div class="modal fade" id="privPermissionDetailModal-<%= role.id %>" tabindex="-1" aria-labelledby="privPermissionDetailModalLabel-<%= role.id %>" aria-hidden="true">
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="privPermissionDetailModalLabel-<%= role.id %>">Privileged Permission Information</h5>
                          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                          <dl class="row mb-0">
                            <dt class="col-sm-4">Permission Name</dt>
                            <dd class="col-sm-8"><%= role.name || '<span class="text-muted">No data</span>' %></dd>
                            <dt class="col-sm-4">Description</dt>
                            <dd class="col-sm-8"><%= role.description || '<span class="text-muted">No data</span>' %></dd>
                            <dt class="col-sm-4">System</dt>
                            <dd class="col-sm-8"><%= (role.system && role.system.name) ? role.system.name : (role.system_id || '<span class="text-muted">No data</span>') %></dd>
                            <dt class="col-sm-4">Created At</dt>
                            <dd class="col-sm-8"><%= role.created_at ? new Date(role.created_at).toLocaleString() : '<span class="text-muted">No data</span>' %></dd>
                            <dt class="col-sm-4">Updated At</dt>
                            <dd class="col-sm-8"><%= role.updated_date ? new Date(role.updated_date).toLocaleString() : '<span class="text-muted">No data</span>' %></dd>
                            <dt class="col-sm-4">Updated By</dt>
                            <dd class="col-sm-8"><%= role.updated_by || '<span class="text-muted">No data</span>' %></dd>
                          </dl>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Close</button>
                        </div>
                      </div>
                    </div>
                  </div>
                <% }) %>
              <% } else { %>
                <tr><td colspan="5" class="text-center">No data</td></tr>
              <% } %>
            </tbody>
          </table>
        </div>
        <div class="card-footer clearfix">
          <div class="d-flex justify-content-between align-items-center px-3 pb-2" style="padding-top: 1rem;">
            <div>
              <span>Showing <%= startItem %> - <%= endItem %> of <%= totalCount %> roles</span>
            </div>
            <ul class="pagination pagination-sm m-0 float-end">
              <% 
                let startPage = 1;
                let endPage = totalPages;
                if (totalPages > 10) {
                  if (page <= 6) {
                    startPage = 1;
                    endPage = 10;
                  } else if (page + 4 >= totalPages) {
                    startPage = totalPages - 9;
                    endPage = totalPages;
                  } else {
                    startPage = page - 5;
                    endPage = page + 4;
                  }
                }
                // Build filter query string for pagination links
                function buildPrivRoleFilterQuery() {
                  let params = [];
                  if (typeof search !== 'undefined' && search) params.push('search=' + encodeURIComponent(search));
                  if (typeof pageSize !== 'undefined' && pageSize) params.push('pageSize=' + encodeURIComponent(pageSize));
                  if (typeof system_id !== 'undefined' && system_id) params.push('system_id=' + encodeURIComponent(system_id));
                  return params.join('&');
                }
                const privRoleFilterQuery = buildPrivRoleFilterQuery();
              %>
              <li class="page-item <%= page <= 1 ? 'disabled' : '' %>">
                <a class="page-link" href="?page=<%= page - 1 %><%= privRoleFilterQuery ? '&' + privRoleFilterQuery : '' %>">Previous</a>
              </li>
              <% if (startPage > 1) { %>
                <li class="page-item"><a class="page-link" href="?page=1<%= privRoleFilterQuery ? '&' + privRoleFilterQuery : '' %>">1</a></li>
                <% if (startPage > 2) { %>
                  <li class="page-item disabled"><span class="page-link">...</span></li>
                <% } %>
              <% } %>
              <% for (let i = startPage; i <= endPage; i++) { %>
                <li class="page-item <%= i === page ? 'active' : '' %>"><a class="page-link" href="?page=<%= i %><%= privRoleFilterQuery ? '&' + privRoleFilterQuery : '' %>"><%= i %></a></li>
              <% } %>
              <% if (endPage < totalPages) { %>
                <li class="page-item disabled"><span class="page-link">...</span></li>
                <li class="page-item"><a class="page-link" href="?page=<%= totalPages %><%= privRoleFilterQuery ? '&' + privRoleFilterQuery : '' %>"><%= totalPages %></a></li>
              <% } %>
              <li class="page-item <%= page >= totalPages ? 'disabled' : '' %>">
                <a class="page-link" href="?page=<%= page + 1 %><%= privRoleFilterQuery ? '&' + privRoleFilterQuery : '' %>">Next</a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
