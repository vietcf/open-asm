                      <td><%= account.created_at ? account.created_at.toLocaleString() : '' %></td>
                      <td class="text-end">
                        <a href="#" class="btn btn-info btn-sm" title="Show" data-bs-toggle="modal" data-bs-target="#privUserDetailModal-<%= account.id %>"><i class="bi bi-eye"></i></a>
