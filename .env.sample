# ===========================================
# Open ASM - Environment Configuration Sample
# ===========================================
# Copy this file to .env and update the values according to your setup

# ===========================================
# Application Configuration
# ===========================================
SITE_NAME="Open ASM"
ADMIN_EMAIL=admin@localhost

# Application environment variables
NODE_ENV=development
PORT=3000

# ===========================================
# Security Configuration
# ===========================================
# Session Security - CHANGE THIS IN PRODUCTION!
SESSION_SECRET=your-super-secret-session-key-change-this

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-change-this
JWT_EXPIRES_IN=8h

# ===========================================
# Database Configuration (PostgreSQL)
# ===========================================
POSTGRES_HOST=127.0.0.1
# For Docker: use 'db' instead of '127.0.0.1'
# POSTGRES_HOST=db
POSTGRES_DB=openasm
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-database-password
POSTGRES_PORT=5432
POSTGRES_SSL=false

# ===========================================
# File Upload Configuration
# ===========================================
# File upload driver: 'local' or 's3'
FILE_UPLOAD_DRIVER=local

# Directory for storing uploaded files (relative to project root or absolute)
UPLOADS_DIR=public/uploads

# ===========================================
# AWS S3 Configuration (Optional)
# ===========================================
# Only needed if FILE_UPLOAD_DRIVER=s3
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=ap-southeast-1
# AWS_S3_BUCKET=your-bucket-name
# AWS_S3_BASE_URL=https://your-bucket-name.s3.amazonaws.com

# ===========================================
# Database Backup Configuration
# ===========================================
# Backup frequency: daily, weekly, monthly
BACKUP_FREQUENCY=daily

# Number of backups to keep (default: 7)
BACKUP_RETENTION=7

# Backup directory (default: backups folder in app root)
# BACKUP_DIR=/path/to/backup/directory

# ===========================================
# Legacy PostgreSQL Variables (for compatibility)
# ===========================================
# These are kept for backward compatibility
# PGUSER=postgres
# PGHOST=127.0.0.1
# PGDATABASE=openasm
# PGPASSWORD=your-database-password
# PGPORT=5432
